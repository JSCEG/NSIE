@model HeaderViewModel

<div class="text-center mb-4">
    <h3 class="cp-section cp-grouping-section">
        <img src="~/img/modulos/@Model.IconPath" alt="@Model.Title" class="iconomenu">
        @Model.Title
        <button class="btn btn-link text-info help-trigger" data-module-info='@Html.Raw(Model.ModuleInfo)'
            onclick="mostrarAyudaModulo(this.getAttribute('data-module-info'))" data-bs-toggle="tooltip"
            title="¿Qué es este módulo?">
            <i class="fas fa-question-circle fa-lg"></i>
        </button>
    </h3>
    <div class="text-muted mt-2 text-justify px-5">
        <i class="fas fa-info-circle text-primary"></i>
        <em>@Model.Description</em>
    </div>
</div>

<div class="alert alert-light mb-4" role="alert">
    <nav aria-label="breadcrumb" style="padding-left:15px">
        <ol class="breadcrumb lp-5">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Inicio</a>
            </li>
            @if (!string.IsNullOrEmpty(Model.Section))
            {
                <li class="breadcrumb-item">
                    <a href="javascript:history.back()">@Model.Section</a>
                </li>
            }
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>
</div>
<div class="container ps-5 pe-5">
    <div class="alert alert-success mb-4 ps-5 pe-5" role="alert">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <img src="~/img/iconos/legal_foundations.png" alt="Fundamento Legal" class="img-fluid">
            </div>
            <div class="col-md-10">
                <h5 class="alert-heading mb-2">
                    <i class="fas fa-book-reader"></i> Fundamento Legal
                </h5>
                <p class="mb-1 text-justify">
                    @foreach (var fundamento in Model.Fundamentos)
                    {
                        <span class="badge bg-primary me-2" data-bs-toggle="tooltip" title="@fundamento.Description">
                            @fundamento.Reference
                        </span>
                    }
                </p>
                <hr>
                <p class="mb-0 small text-justify">
                    <i class="fas fa-info-circle"></i>
                    @Model.LegalDescription
                </p>
            </div>
        </div>
    </div>
</div>
