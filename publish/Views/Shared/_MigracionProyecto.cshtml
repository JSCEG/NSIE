<script>
   /**
 * Dashboard MISSE - Executive Dashboard JavaScript
 * Handles interactivity, data management, and UI updates
 */

class MISSEDashboard {
    constructor() {
        this.projectData = {
            name: 'Parque Eólico Ventanas',
            rfc: 'GME850101ABC',
            promovente: 'Energía Renovable S.A. de C.V.',
            capacity: '50 MW',
            technology: 'Eólica',
            status: 'En Migración',
            completionPercentage: 85,
            documentsCompleted: 18,
            documentsTotal: 21
        };

        this.documentStatus = {
            'identificacion': { status: 'approved', name: 'Identificación Oficial' },
            'curp': { status: 'approved', name: 'CURP' },
            'rfc': { status: 'approved', name: 'RFC' },
            'acta_constitutiva': { status: 'approved', name: 'Acta Constitutiva' },
            'estados_financieros': { status: 'approved', name: 'Estados Financieros' },
            'comprobante_domicilio': { status: 'review', name: 'Comprobante de Domicilio' },
            'diagrama_unifilar': { status: 'missing', name: 'Diagrama Unifilar' },
            'permiso_generacion': { status: 'approved', name: 'Permiso de Generación' }
        };

        this.init();
    }

    init() {
        this.setupEventListeners();
        this.updateProgressBars();
        this.updateDocumentStats();
        this.initializeTooltips();
        this.startRealTimeUpdates();
    }

    setupEventListeners() {
        // Tab switching with analytics
        document.querySelectorAll('[data-bs-toggle="tab"]').forEach(tab => {
            tab.addEventListener('shown.bs.tab', (e) => {
                this.trackTabView(e.target.getAttribute('data-bs-target'));
                this.refreshTabContent(e.target.getAttribute('data-bs-target'));
            });
        });

        // Document card interactions
        document.querySelectorAll('.document-card').forEach(card => {
            card.addEventListener('click', (e) => {
                const docType = e.currentTarget.getAttribute('data-doc');
                this.openDocumentModal(docType);
            });
        });

        // Add event listeners for modal close buttons
        document.addEventListener('click', (e) => {
            if (e.target.classList.contains('btn-close') || e.target.getAttribute('data-bs-dismiss') === 'modal') {
                // Find the closest modal and force close it properly
                const modal = e.target.closest('.modal');
                if (modal) {
                    this.closeModal(modal.id);
                }
            }
        });

        // Checklist item interactions
        document.querySelectorAll('.checklist-item input[type="checkbox"]').forEach(checkbox => {
            checkbox.addEventListener('change', (e) => {
                this.updateChecklistItem(e.target);
            });
        });

        // Approval actions
        document.getElementById('approvalModal')?.addEventListener('shown.bs.modal', () => {
            this.prepareApprovalModal();
        });

        // Review actions
        document.getElementById('reviewModal')?.addEventListener('shown.bs.modal', () => {
            this.prepareReviewModal();
        });

        // Search and filter functionality
        this.setupSearchAndFilter();
    }

    updateProgressBars() {
        const progressBars = document.querySelectorAll('.progress-bar');
        progressBars.forEach(bar => {
            const width = bar.style.width;
            if (width) {
                this.animateProgressBar(bar, parseInt(width));
            }
        });
    }

    animateProgressBar(bar, targetWidth) {
        let currentWidth = 0;
        const increment = targetWidth / 50;
        
        const animation = setInterval(() => {
            currentWidth += increment;
            if (currentWidth >= targetWidth) {
                currentWidth = targetWidth;
                clearInterval(animation);
            }
            bar.style.width = `${currentWidth}%`;
        }, 20);
    }

    updateDocumentStats() {
        const totalDocs = Object.keys(this.documentStatus).length;
        const approvedDocs = Object.values(this.documentStatus).filter(doc => doc.status === 'approved').length;
        const reviewDocs = Object.values(this.documentStatus).filter(doc => doc.status === 'review').length;
        const missingDocs = Object.values(this.documentStatus).filter(doc => doc.status === 'missing').length;

        // Update circular progress
        const percentage = Math.round((approvedDocs / totalDocs) * 100);
        this.updateCircularProgress(percentage);

        // Update stats grid
        this.updateStatsGrid({
            approved: approvedDocs,
            review: reviewDocs,
            missing: missingDocs,
            total: totalDocs
        });
    }

    updateCircularProgress(percentage) {
        const circle = document.querySelector('.circle');
        const percentageText = document.querySelector('.percentage');
        
        if (circle && percentageText) {
            circle.style.strokeDasharray = `${percentage}, 100`;
            percentageText.textContent = `${percentage}%`;
        }
    }

    updateStatsGrid(stats) {
        const statNumbers = document.querySelectorAll('.stat-number');
        if (statNumbers.length >= 4) {
            statNumbers[0].textContent = stats.approved;
            statNumbers[1].textContent = stats.review;
            statNumbers[2].textContent = stats.missing;
            statNumbers[3].textContent = stats.total;
        }
    }

    openDocumentModal(docType) {
        const modal = document.getElementById('documentModal');
        const modalTitle = modal.querySelector('.modal-title');
        const modalBody = modal.querySelector('.modal-body');
        
        const docInfo = this.documentStatus[docType];
        if (docInfo) {
            modalTitle.innerHTML = `<i class="fas fa-file-pdf me-2"></i>${docInfo.name}`;
            
            // Simulate document preview
            modalBody.innerHTML = this.generateDocumentPreview(docType, docInfo);
            
            // Show modal
            const bsModal = new bootstrap.Modal(modal);
            bsModal.show();
        }
    }

    generateDocumentPreview(docType, docInfo) {
        const statusClass = this.getStatusClass(docInfo.status);
        const statusText = this.getStatusText(docInfo.status);
        
        return `
            <div class="text-center p-4">
                <div class="document-preview mb-4">
                    <i class="fas fa-file-pdf fa-5x text-danger mb-3"></i>
                    <h5>${docInfo.name}</h5>
                    <p class="text-muted">Vista previa del documento</p>
                    <span class="badge ${statusClass} fs-6">${statusText}</span>
                </div>
                
                <div class="document-metadata mb-4">
                    <div class="row text-start">
                        <div class="col-md-6">
                            <small class="text-muted d-block">Fecha de carga:</small>
                            <span>${this.formatDate(new Date())}</span>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted d-block">Tamaño:</small>
                            <span>2.4 MB</span>
                        </div>
                    </div>
                </div>
                
                <div class="document-actions d-flex justify-content-center gap-2">
                    <button class="btn btn-success btn-sm" onclick="dashboard.approveDocument('${docType}')">
                        <i class="fas fa-check me-1"></i>Aprobar
                    </button>
                    <button class="btn btn-warning btn-sm" onclick="dashboard.requestDocumentCorrection('${docType}')">
                        <i class="fas fa-exclamation-triangle me-1"></i>Solicitar Corrección
                    </button>
                    <button class="btn btn-danger btn-sm" onclick="dashboard.rejectDocument('${docType}')">
                        <i class="fas fa-times me-1"></i>Rechazar
                    </button>
                    <button class="btn btn-info btn-sm" onclick="dashboard.downloadDocument('${docType}')">
                        <i class="fas fa-download me-1"></i>Descargar
                    </button>
                </div>
            </div>
        `;
    }

    getStatusClass(status) {
        const statusClasses = {
            'approved': 'bg-success',
            'review': 'bg-warning text-dark',
            'missing': 'bg-danger',
            'pending': 'bg-secondary'
        };
        return statusClasses[status] || 'bg-secondary';
    }

    getStatusText(status) {
        const statusTexts = {
            'approved': 'Aprobado',
            'review': 'En Revisión',
            'missing': 'Faltante',
            'pending': 'Pendiente'
        };
        return statusTexts[status] || 'Desconocido';
    }

    approveDocument(docType) {
        this.documentStatus[docType].status = 'approved';
        this.showNotification('Documento aprobado exitosamente', 'success');
        this.updateDocumentStats();
        this.closeModal('documentModal');
        this.refreshDocumentDisplay();
    }

    requestDocumentCorrection(docType) {
        this.documentStatus[docType].status = 'review';
        this.showNotification('Solicitud de corrección enviada', 'warning');
        this.updateDocumentStats();
        this.closeModal('documentModal');
        this.refreshDocumentDisplay();
    }

    rejectDocument(docType) {
        this.documentStatus[docType].status = 'missing';
        this.showNotification('Documento rechazado', 'danger');
        this.updateDocumentStats();
        this.closeModal('documentModal');
        this.refreshDocumentDisplay();
    }

    downloadDocument(docType) {
        // Simulate document download
        this.showNotification('Descarga iniciada', 'info');
        console.log(`Downloading document: ${docType}`);
    }

    showNotification(message, type = 'info') {
        const notification = document.createElement('div');
        notification.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
        notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
        notification.innerHTML = `
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        
        document.body.appendChild(notification);
        
        // Auto remove after 3 seconds
        setTimeout(() => {
            if (notification.parentNode) {
                notification.parentNode.removeChild(notification);
            }
        }, 3000);
    }

    closeModal(modalId) {
        const modal = document.getElementById(modalId);
        const bsModal = bootstrap.Modal.getInstance(modal);
        if (bsModal) {
            bsModal.hide();
        }
        
        // Force remove backdrop and restore body scroll
        setTimeout(() => {
            document.querySelectorAll('.modal-backdrop').forEach(backdrop => {
                backdrop.remove();
            });
            document.body.classList.remove('modal-open');
            document.body.style.overflow = '';
            document.body.style.paddingRight = '';
        }, 300);
    }

    refreshDocumentDisplay() {
        // Update document cards status
        document.querySelectorAll('.document-card').forEach(card => {
            const docType = card.getAttribute('data-doc');
            if (this.documentStatus[docType]) {
                const statusBadge = card.querySelector('.badge');
                const status = this.documentStatus[docType].status;
                
                statusBadge.className = `badge ${this.getStatusClass(status)}`;
                statusBadge.textContent = this.getStatusText(status);
            }
        });

        // Update checklist items
        this.updateChecklistDisplay();
    }

    updateChecklistDisplay() {
        document.querySelectorAll('.checklist-item').forEach(item => {
            const checkbox = item.querySelector('input[type="checkbox"]');
            if (checkbox) {
                const docType = checkbox.getAttribute('data-doc');
                if (this.documentStatus[docType]) {
                    const status = this.documentStatus[docType].status;
                    const badge = item.querySelector('.badge');
                    
                    // Update checkbox state
                    checkbox.checked = status === 'approved';
                    checkbox.disabled = status === 'approved';
                    
                    // Update item class
                    item.className = `checklist-item ${this.getChecklistItemClass(status)}`;
                    
                    // Update badge
                    if (badge) {
                        badge.className = `badge ${this.getStatusClass(status)}`;
                        badge.textContent = this.getStatusText(status);
                    }
                }
            }
        });
    }

    getChecklistItemClass(status) {
        const itemClasses = {
            'approved': 'completed',
            'review': 'pending',
            'missing': 'missing',
            'pending': 'pending'
        };
        return itemClasses[status] || 'pending';
    }

    prepareApprovalModal() {
        const modal = document.getElementById('approvalModal');
        const textarea = modal.querySelector('#approvalComments');
        textarea.value = '';
        textarea.focus();
    }

    prepareReviewModal() {
        const modal = document.getElementById('reviewModal');
        const textarea = modal.querySelector('#reviewComments');
        const checkbox = modal.querySelector('#notifyPromovente');
        
        textarea.value = '';
        checkbox.checked = true;
        textarea.focus();
    }

    trackTabView(tabId) {
        console.log(`Tab viewed: ${tabId}`);
        // Analytics tracking would go here
    }

    refreshTabContent(tabId) {
        switch(tabId) {
            case '#executive':
                this.refreshExecutiveTab();
                break;
            case '#ventanilla':
                this.refreshVentanillaTab();
                break;
            case '#checklist':
                this.refreshChecklistTab();
                break;
            case '#migracion':
                this.refreshMigracionTab();
                break;
        }
    }

    refreshExecutiveTab() {
        // Update KPI cards
        this.updateKPICards();
        // Update timeline
        this.updateTimeline();
    }

    refreshVentanillaTab() {
        // Refresh form data display
        this.updateFormDisplay();
    }

    refreshChecklistTab() {
        // Refresh checklist status
        this.updateChecklistDisplay();
        this.updateDocumentStats();
    }

    refreshMigracionTab() {
        // Refresh migration format data
        this.updateMigrationData();
    }

    updateKPICards() {
        // Update capacity, documents, investment, and status cards
        const kpiCards = document.querySelectorAll('.card h3');
        if (kpiCards.length >= 4) {
            kpiCards[0].textContent = this.projectData.capacity;
            kpiCards[1].textContent = `${this.projectData.documentsCompleted}/${this.projectData.documentsTotal}`;
            kpiCards[2].textContent = '$120M';
            kpiCards[3].textContent = `${this.projectData.completionPercentage}%`;
        }
    }

    updateTimeline() {
        const timeline = document.querySelector('.timeline');
        if (timeline) {
            // Timeline updates would be handled here
            console.log('Timeline updated');
        }
    }

    updateFormDisplay() {
        // Update form field displays
        console.log('Form display updated');
    }

    updateMigrationData() {
        // Update migration format tables
        console.log('Migration data updated');
    }

    setupSearchAndFilter() {
        // Add search functionality
        const searchInput = document.createElement('input');
        searchInput.type = 'text';
        searchInput.className = 'form-control';
        searchInput.placeholder = 'Buscar documentos...';
        
        searchInput.addEventListener('input', (e) => {
            this.filterDocuments(e.target.value);
        });
    }

    filterDocuments(searchTerm) {
        const documentCards = document.querySelectorAll('.document-card');
        documentCards.forEach(card => {
            const documentName = card.querySelector('.document-name').textContent.toLowerCase();
            const isVisible = documentName.includes(searchTerm.toLowerCase());
            card.style.display = isVisible ? 'flex' : 'none';
        });
    }

    startRealTimeUpdates() {
        // Simulate real-time updates every 30 seconds
        setInterval(() => {
            this.simulateDataUpdate();
        }, 30000);
    }

    simulateDataUpdate() {
        // Simulate random status changes
        const docTypes = Object.keys(this.documentStatus);
        const randomDoc = docTypes[Math.floor(Math.random() * docTypes.length)];
        
        // Small chance of status change
        if (Math.random() < 0.1) {
            const currentStatus = this.documentStatus[randomDoc].status;
            if (currentStatus === 'review') {
                this.documentStatus[randomDoc].status = 'approved';
                this.showNotification(`${this.documentStatus[randomDoc].name} ha sido aprobado automáticamente`, 'success');
                this.updateDocumentStats();
                this.refreshDocumentDisplay();
            }
        }
    }

    initializeTooltips() {
        // Initialize Bootstrap tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    }

    formatDate(date) {
        return date.toLocaleDateString('es-MX', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        });
    }

    exportData(format = 'pdf') {
        // Simulate data export
        this.showNotification(`Exportando datos en formato ${format.toUpperCase()}...`, 'info');
        
        setTimeout(() => {
            this.showNotification(`Exportación completada exitosamente`, 'success');
        }, 2000);
    }

    generateReport() {
        const reportData = {
            project: this.projectData,
            documents: this.documentStatus,
            timestamp: new Date().toISOString(),
            completionRate: this.projectData.completionPercentage
        };
        
        console.log('Report generated:', reportData);
        this.showNotification('Reporte generado exitosamente', 'success');
    }
}

