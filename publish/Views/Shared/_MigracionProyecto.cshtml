body {
    background-color: hsl(var(--light-color));
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

/* Custom Card Styles */
.card {
    border: none;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
}

.card:hover {
    box-shadow: var(--shadow);
    transform: translateY(-2px);
}

/* Document Cards */
.document-card {
    display: flex;
    align-items: center;
    padding: 15px;
    border: 2px solid hsl(var(--border-color));
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    background: white;
}

.document-card:hover {
    border-color: hsl(var(--primary-color));
    background-color: hsl(var(--primary-color) / 0.05);
    transform: translateY(-2px);
    box-shadow: var(--shadow);
}

.document-icon {
    margin-right: 12px;
    font-size: 1.5rem;
}

.document-info {
    flex-grow: 1;
}

.document-name {
    font-weight: 600;
    color: hsl(var(--dark-color));
    margin-bottom: 4px;
}

.document-status {
    margin-top: 4px;
}

/* Timeline Styles */
.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 15px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: hsl(var(--border-color));
}

.timeline-item {
    position: relative;
    margin-bottom: 20px;
}

.timeline-marker {
    position: absolute;
    left: -22px;
    top: 5px;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid white;
    box-shadow: var(--shadow-sm);
}

.timeline-content h6 {
    margin-bottom: 2px;
    font-size: 0.9rem;
}

.timeline-content small {
    color: hsl(var(--dark-color) / 0.6);
}

/* Checklist Styles */
.checklist-section {
    margin-bottom: 30px;
    padding: 20px;
    background: white;
    border-radius: 8px;
    border: 1px solid hsl(var(--border-color));
}

.checklist-items {
    space-y: 10px;
}

.checklist-item {
    display: flex;
    justify-content: between;
    align-items: center;
    padding: 12px 16px;
    border-radius: 6px;
    margin-bottom: 8px;
    transition: all 0.2s ease;
}

.checklist-item.completed {
    background-color: hsl(var(--success-color) / 0.1);
    border-left: 4px solid hsl(var(--success-color));
}

.checklist-item.pending {
    background-color: hsl(var(--warning-color) / 0.1);
    border-left: 4px solid hsl(var(--warning-color));
}

.checklist-item.missing {
    background-color: hsl(var(--danger-color) / 0.1);
    border-left: 4px solid hsl(var(--danger-color));
}

.checklist-item .form-check {
    flex-grow: 1;
}

.item-actions {
    display: flex;
    align-items: center;
    gap: 8px;
}

/* Circular Progress */
.circular-progress {
    position: relative;
    width: 120px;
    height: 120px;
    margin: 0 auto;
}

.circular-chart {
    width: 100%;
    height: 100%;
    transform: rotate(-90deg);
}

.circle-bg {
    fill: none;
    stroke: hsl(var(--border-color));
    stroke-width: 2.8;
}

.circle {
    fill: none;
    stroke: hsl(var(--success-color));
    stroke-width: 2.8;
    stroke-linecap: round;
    transition: stroke-dasharray 0.6s ease;
}

.percentage {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 1.5rem;
    font-weight: bold;
    color: hsl(var(--success-color));
}

/* Stats Grid */
.stats-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
    margin-top: 20px;
}

.stat-item {
    text-align: center;
    padding: 10px;
    background: hsl(var(--light-color));
    border-radius: 6px;
}

.stat-number {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 4px;
}

.stat-label {
    font-size: 0.85rem;
    color: hsl(var(--dark-color) / 0.7);
}

/* Table Enhancements */
.table-hover tbody tr:hover {
    background-color: hsl(var(--primary-color) / 0.05);
}

.table th {
    font-weight: 600;
    color: hsl(var(--dark-color));
    border-bottom: 2px solid hsl(var(--border-color));
}

/* Badge Styles */
.badge {
    font-size: 0.75rem;
    padding: 0.5em 0.75em;
    font-weight: 500;
}

/* Progress Bar Enhancements */
.progress {
    background-color: hsl(var(--light-color));
    border-radius: 4px;
}

.progress-bar {
    transition: width 0.6s ease;
}

/* Button Enhancements */
.btn {
    border-radius: 6px;
    font-weight: 500;
    transition: all 0.2s ease;
}

.btn:hover {
    transform: translateY(-1px);
}

.btn-sm {
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
}

/* Modal Enhancements */
.modal-content {
    border: none;
    border-radius: 12px;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
}

.modal-header {
    border-bottom: 1px solid hsl(var(--border-color));
    border-radius: 12px 12px 0 0;
}

.modal-footer {
    border-top: 1px solid hsl(var(--border-color));
    border-radius: 0 0 12px 12px;
}

/* Navigation Enhancements */
.nav-tabs .nav-link {
    border: none;
    color: hsl(var(--dark-color) / 0.7);
    font-weight: 500;
    padding: 12px 20px;
    transition: all 0.2s ease;
}

.nav-tabs .nav-link:hover {
    border-color: transparent;
    color: hsl(var(--primary-color));
    background-color: hsl(var(--primary-color) / 0.05);
}

.nav-tabs .nav-link.active {
    background-color: white;
    border-color: hsl(var(--border-color)) hsl(var(--border-color)) white;
    color: hsl(var(--primary-color));
    font-weight: 600;
}

.nav-pills .nav-link {
    border-radius: 6px;
    margin-right: 8px;
    margin-bottom: 8px;
    transition: all 0.2s ease;
}

.nav-pills .nav-link.active {
    background-color: hsl(var(--primary-color));
}

/* Alert Enhancements */
.alert {
    border: none;
    border-radius: 8px;
    font-size: 0.95rem;
}

.alert-warning {
    background-color: hsl(var(--warning-color) / 0.1);
    color: #664d03;
    border-left: 4px solid hsl(var(--warning-color));
}

/* Responsive Design */
@@media (max-width: 768px) {
    .container-fluid {
        padding: 10px;
    }
    
    .stats-grid {
        grid-template-columns: 1fr;
    }
    
    .document-card {
        flex-direction: column;
        text-align: center;
    }
    
    .document-icon {
        margin-right: 0;
        margin-bottom: 8px;
    }
    
    .timeline {
        padding-left: 20px;
    }
    
    .timeline-marker {
        left: -16px;
    }
}

@@media (max-width: 576px) {
    .nav-tabs {
        flex-direction: column;
    }
    
    .nav-tabs .nav-item {
        width: 100%;
    }
    
    .nav-tabs .nav-link {
        text-align: center;
        margin-bottom: 2px;
    }
    
    .circular-progress {
        width: 100px;
        height: 100px;
    }
    
    .percentage {
        font-size: 1.25rem;
    }
}

/* Loading Animation */
.loading {
    display: inline-block;
    width: 20px;
    height: 20px;
    border: 2px solid hsl(var(--border-color));
    border-radius: 50%;
    border-top-color: hsl(var(--primary-color));
    animation: spin 1s ease-in-out infinite;
}

@@keyframes spin {
    to { transform: rotate(360deg); }
}

/* Success Animation */
@@keyframes slideInUp {
    from {
        transform: translate3d(0, 100%, 0);
        visibility: visible;
    }
    to {
        transform: translate3d(0, 0, 0);
    }
}

.slide-in-up {
    animation: slideInUp 0.5s ease-out;
}

/* Focus States */
.form-control:focus,
.form-select:focus {
    border-color: hsl(var(--primary-color));
    box-shadow: 0 0 0 0.2rem hsl(var(--primary-color) / 0.25);
}

/* Print Styles */
@@media print {
    .nav-tabs,
    .modal,
    .btn,
    .alert {
        display: none !important;
    }
    
    .card {
