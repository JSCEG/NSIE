@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@using NSIE.Models
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Integrantes y Roles del Consejo";
    var httpContext = HttpContextAccessor.HttpContext;
    var perfilUsuarioJson = httpContext.Session.GetString("PerfilUsuario");
    var perfilUsuario = JsonConvert.DeserializeObject<PerfilUsuario>(perfilUsuarioJson);
}

<div class="text-center mb-4">
    <h3 class="cp-section cp-grouping-section">
        <img src="~/img/modulos/integrantes_roles.png" alt="Integrantes y Roles" class="iconomenu">
        @ViewData["Title"]
        <button class="btn btn-link text-info" onclick="mostrarAyudaModulo()" data-bs-toggle="tooltip"
            title="¿Qué es este módulo?">
            <i class="fas fa-question-circle fa-lg"></i>
        </button>
    </h3>
    <div class="text-muted mt-2 text-justify px-5">
        <i class="fas fa-info-circle text-primary"></i>
        <em>Sistema de consulta de la estructura colegiada, facultades y participación del Consejo.</em>
    </div>
</div>

<div class="alert alert-light mb-4" role="alert">
    <nav aria-label="breadcrumb" style="padding-left:15px">
        <ol class="breadcrumb lp-5">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="container-fluid ps-5 pe-5">
    <div class="alert alert-success mb-4" role="alert">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <img src="~/img/iconos/integrantes_roles.png" alt="Fundamento Legal" class="img-fluid">
            </div>
            <div class="col-md-10">
                <h5 class="alert-heading mb-2">
                    <i class="fas fa-book-reader"></i> Fundamento Legal
                </h5>
                <p class="mb-1 text-justify">
                    <span class="badge bg-primary" data-bs-toggle="tooltip" title="Define la estructura del Consejo">
                        Arts. 11-13 Lineamientos
                    </span>
                    <span class="badge bg-info ms-2" data-bs-toggle="tooltip"
                        title="Establece cumplimiento institucional">
                        Arts. 28-34 Lineamientos
                    </span>
                </p>
                <hr>
                <p class="mb-0 small text-justify">
                    <i class="fas fa-info-circle"></i>
                    La definición clara de roles y responsabilidades es esencial para garantizar
                    el cumplimiento efectivo de los acuerdos institucionales.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function mostrarAyudaModulo() {
            Swal.fire({
                title: 'Integrantes y Roles del Consejo',
                html: `
                                <div class="text-start">
                                    <div class="mb-4">
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-info-circle"></i> Descripción
                                        </h6>
                                        <p>Sistema de visualización de la estructura colegiada y sus integrantes.</p>
                                    </div>

                                    <div class="mb-4">
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-tasks"></i> Funcionalidad
                                        </h6>
                                        <p>Permite consultar la composición y participación del Consejo.</p>
                                    </div>

                                    <div class="mb-4">
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-sync-alt"></i> Etapa del Ciclo
                                        </h6>
                                        <p>Estructura colegiada</p>
                                    </div>

                                    <div class="mb-4">
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-users-cog"></i> Interacción entre Roles
                                        </h6>
                                        <ul class="list-unstyled">
                                            <li><i class="fas fa-user-edit text-primary"></i> Responsables: Actualizan cumplimiento</li>
                                            <li><i class="fas fa-users text-success"></i> Consejo: Evalúa en sesión</li>
                                        </ul>
                                    </div>

                                    <div class="mb-4">
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-puzzle-piece"></i> Elementos
                                        </h6>
                                        <ul class="list-unstyled">
                                            <li><i class="fas fa-id-card text-primary"></i> Tarjetas de acuerdos</li>
                                            <li><i class="fas fa-filter text-success"></i> Filtros por fecha/responsable</li>
                                            <li><i class="fas fa-tasks text-info"></i> Avance de cumplimiento</li>
                                        </ul>
                                    </div>

                                    <div class="mb-4">
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-star"></i> Importancia
                                        </h6>
                                        <p class="mb-0">
                                            Facilita el seguimiento del cumplimiento de acuerdos por parte de
                                            las unidades responsables.
                                        </p>
                                    </div>

                                    <div>
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-check-double"></i> Orden en el Ciclo
                                        </h6>
                                        <p class="mb-0">
                                            <span class="badge bg-warning">Paso 12</span>
                                            <span class="ms-2">
                                                Visualiza el cumplimiento de acuerdos por las unidades responsables.
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            `,
                width: '400px',
                customClass: {
                    container: 'text-start',
                    popup: 'swal-responsive',
                    htmlContainer: 'swal-scrollable'
                },
                confirmButtonText: 'Entendido'
            });
        }
    </script>

    <style>
        .swal-responsive {
            margin: 1rem !important;
            max-height: 90vh !important;
            width: 400px !important;
        }

        .swal-scrollable {
            max-height: calc(90vh - 200px) !important;
            overflow-y: auto !important;
            padding-right: 10px !important;
        }
    </style>
}