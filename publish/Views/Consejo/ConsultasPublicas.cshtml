@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@using NSIE.Models
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Consultas Públicas del Consejo";
    var httpContext = HttpContextAccessor.HttpContext;
    var perfilUsuarioJson = httpContext.Session.GetString("PerfilUsuario");
    var perfilUsuario = JsonConvert.DeserializeObject<PerfilUsuario>(perfilUsuarioJson);
}

<div class="text-center mb-4">
    <h3 class="cp-section cp-grouping-section">
        <img src="~/img/modulos/consultas_publicas.png" alt="Consultas Públicas" class="iconomenu">
        @ViewData["Title"]
        <button class="btn btn-link text-info" onclick="mostrarAyudaModulo()" data-bs-toggle="tooltip"
            title="¿Qué es este módulo?">
            <i class="fas fa-question-circle fa-lg"></i>
        </button>
    </h3>
    <div class="text-muted mt-2 text-justify px-5">
        <i class="fas fa-info-circle text-primary"></i>
        <em>Sistema de transparencia y consulta pública de acuerdos y votaciones del Consejo.</em>
    </div>
</div>

<div class="alert alert-light mb-4" role="alert">
    <nav aria-label="breadcrumb" style="padding-left:15px">
        <ol class="breadcrumb lp-5">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="container-fluid ps-5 pe-5">
    <div class="alert alert-success mb-4" role="alert">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <img src="~/img/iconos/legal_foundations.png" alt="Fundamento Legal" class="img-fluid">
            </div>
            <div class="col-md-10">
                <h5 class="alert-heading mb-2">
                    <i class="fas fa-book-reader"></i> Fundamento Legal
                </h5>
                <p class="mb-1 text-justify">
                    <span class="badge bg-primary" data-bs-toggle="tooltip" title="Establece transparencia pública">
                        Art. 77 RLPT
                    </span>
                    <span class="badge bg-info ms-2" data-bs-toggle="tooltip" title="Define el seguimiento de asuntos">
                        Arts. 21-33 Lineamientos
                    </span>
                </p>
                <hr>
                <p class="mb-0 small text-justify">
                    <i class="fas fa-info-circle"></i>
                    La transparencia en la gestión y seguimiento de asuntos públicos es fundamental
                    para mantener informada a la sociedad sobre las decisiones del Consejo.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function mostrarAyudaModulo() {
            Swal.fire({
                title: 'Consultas Públicas del Consejo',
                html: `
                                    <div class="text-start">
                                        <div class="mb-4">
                                            <h6 class="border-bottom pb-2">
                                                <i class="fas fa-info-circle"></i> Descripción
                                            </h6>
                                            <p>Sistema de transparencia para visualizar acuerdos y votaciones públicas.</p>
                                        </div>

                                        <div class="mb-4">
                                            <h6 class="border-bottom pb-2">
                                                <i class="fas fa-tasks"></i> Funcionalidad
                                            </h6>
                                            <p>Permite consultar el estado y seguimiento de asuntos públicos del Consejo.</p>
                                        </div>

                                        <div class="mb-4">
                                            <h6 class="border-bottom pb-2">
                                                <i class="fas fa-sync-alt"></i> Etapa del Ciclo
                                            </h6>
                                            <p>Transparencia pública</p>
                                        </div>

                                        <div class="mb-4">
                                            <h6 class="border-bottom pb-2">
                                                <i class="fas fa-users-cog"></i> Interacción entre Roles
                                            </h6>
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-user-edit text-primary"></i> Secretaría: Gestiona asuntos</li>
                                                <li><i class="fas fa-users text-success"></i> Consejo: Visualiza estados</li>
                                            </ul>
                                        </div>

                                        <div class="mb-4">
                                            <h6 class="border-bottom pb-2">
                                                <i class="fas fa-puzzle-piece"></i> Elementos
                                            </h6>
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-tasks text-primary"></i> Estado de asuntos</li>
                                                <li><i class="fas fa-user-check text-success"></i> Asignación de responsables</li>
                                                <li><i class="fas fa-project-diagram text-info"></i> Fases del ciclo</li>
                                            </ul>
                                        </div>

                                        <div class="mb-4">
                                            <h6 class="border-bottom pb-2">
                                                <i class="fas fa-star"></i> Importancia
                                            </h6>
                                            <p class="mb-0">
                                                Centraliza el control y la trazabilidad de todos los asuntos presentados
                                                para deliberación pública.
                                            </p>
                                        </div>

                                        <div>
                                            <h6 class="border-bottom pb-2">
                                                <i class="fas fa-check-double"></i> Orden en el Ciclo
                                            </h6>
                                            <p class="mb-0">
                                                <span class="badge bg-warning">Paso 11</span>
                                                <span class="ms-2">
                                                    Permite el seguimiento público y permanente del estado de cada asunto.
                                                </span>
                                            </p>
                                        </div>
                                    </div>
                                `,
                width: '400px',
                customClass: {
                    container: 'text-start',
                    popup: 'swal-responsive',
                    htmlContainer: 'swal-scrollable'
                },
                confirmButtonText: 'Entendido'
            });
        }
    </script>

    <style>
        .swal-responsive {
            margin: 1rem !important;
            max-height: 90vh !important;
            width: 400px !important;
        }

        .swal-scrollable {
            max-height: calc(90vh - 200px) !important;
            overflow-y: auto !important;
            padding-right: 10px !important;
        }
    </style>
}