@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@using NSIE.Models
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Asesoría Técnica y Documentación de Apoyo";
    var httpContext = HttpContextAccessor.HttpContext;
    var perfilUsuarioJson = httpContext.Session.GetString("PerfilUsuario");
    var perfilUsuario = JsonConvert.DeserializeObject<PerfilUsuario>(perfilUsuarioJson);
}

<div class="text-center mb-4">
    <h3 class="cp-section cp-grouping-section">
        <img src="~/img/modulos/asesoria.png" alt="Asesoría Técnica" class="iconomenu">
        @ViewData["Title"]
        <button class="btn btn-link text-info" onclick="mostrarAyudaModulo()" data-bs-toggle="tooltip"
            title="¿Qué es este módulo?">
            <i class="fas fa-question-circle fa-lg"></i>
        </button>
    </h3>
    <div class="text-muted mt-2 text-justify px-5">
        <i class="fas fa-info-circle text-primary"></i>
        <em>Sistema de gestión de documentación técnica y validación de quórum para sesiones del Consejo.</em>
    </div>
</div>

<div class="alert alert-light mb-4" role="alert">
    <nav aria-label="breadcrumb" style="padding-left:15px">
        <ol class="breadcrumb lp-5">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="container-fluid ps-5 pe-5">
    <div class="alert alert-success mb-4" role="alert">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <img src="~/img/iconos/legal_foundations.png" alt="Fundamento Legal" class="img-fluid">
            </div>
            <div class="col-md-10">
                <h5 class="alert-heading mb-2">
                    <i class="fas fa-book-reader"></i> Fundamento Legal
                </h5>
                <p class="mb-1 text-justify">
                    <span class="badge bg-primary" data-bs-toggle="tooltip" title="Establece validación de asistencia">
                        Art. 18 Lineamientos
                    </span>
                    <span class="badge bg-info ms-2" data-bs-toggle="tooltip" title="Define quórum para sesiones">
                        Art. 13 Lineamientos
                    </span>
                </p>
                <hr>
                <p class="mb-0 small text-justify">
                    <i class="fas fa-info-circle"></i>
                    La validación de asistencia y quórum es fundamental para garantizar la
                    legitimidad de las decisiones colegiadas del Consejo.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function mostrarAyudaModulo() {
            Swal.fire({
                title: 'Asesoría Técnica y Documentación',
                html: `
                                <div class="text-start">
                                    <div class="mb-4">
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-info-circle"></i> Descripción
                                        </h6>
                                        <p>Sistema de gestión documental técnica y validación de asistencia.</p>
                                    </div>

                                    <div class="mb-4">
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-tasks"></i> Funcionalidad
                                        </h6>
                                        <p>Gestiona documentos de apoyo y confirma quórum para sesiones.</p>
                                    </div>

                                    <div class="mb-4">
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-sync-alt"></i> Etapa del Ciclo
                                        </h6>
                                        <p>Análisis técnico y apoyo</p>
                                    </div>

                                    <div class="mb-4">
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-users-cog"></i> Interacción entre Roles
                                        </h6>
                                        <ul class="list-unstyled">
                                            <li><i class="fas fa-user-tie text-dark"></i> Secretaría Técnica: Envía invitaciones y gestiona documentación</li>
                                            <li><i class="fas fa-user-shield text-primary"></i> Presidente: Verifica asistencia y quórum</li>
                                            <li><i class="fas fa-users text-success"></i> Consejo: Confirma participación en sesiones</li>
                                            <li><i class="fas fa-user-friends text-info"></i> Invitados: Se registran como observadores</li>
                                            <li><i class="fas fa-building text-warning"></i> Unidades Ejecutoras: Acceden a documentación técnica</li>
                                            <li><i class="fas fa-user-graduate text-secondary"></i> Sectorizados: Consultan insumos técnicos</li>
                                        </ul>
                                    </div>

                                    <div class="mb-4">
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-puzzle-piece"></i> Elementos
                                        </h6>
                                        <ul class="list-unstyled">
                                            <li><i class="fas fa-clipboard-check text-primary"></i> Tablero de confirmaciones</li>
                                            <li><i class="fas fa-envelope text-success"></i> Validación por correo/sistema</li>
                                            <li><i class="fas fa-traffic-light text-warning"></i> Semáforo de quórum</li>
                                        </ul>
                                    </div>

                                    <div class="mb-4">
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-star"></i> Importancia
                                        </h6>
                                        <p class="mb-0">
                                            Asegura la validez de las sesiones mediante la confirmación de
                                            asistencia y quórum requerido.
                                        </p>
                                    </div>

                                    <div>
                                        <h6 class="border-bottom pb-2">
                                            <i class="fas fa-check-double"></i> Orden en el Ciclo
                                        </h6>
                                        <p class="mb-0">
                                            <span class="badge bg-warning">Paso 13</span>
                                            <span class="ms-2">
                                                Permite validar la asistencia y asegurar el quórum necesario
                                                para sesiones colegiadas.
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            `,
                width: '400px',
                customClass: {
                    container: 'text-start',
                    popup: 'swal-responsive',
                    htmlContainer: 'swal-scrollable'
                },
                confirmButtonText: 'Entendido'
            });
        }
    </script>

    <style>
        .swal-responsive {
            margin: 1rem !important;
            max-height: 90vh !important;
            width: 400px !important;
        }

        .swal-scrollable {
            max-height: calc(90vh - 200px) !important;
            overflow-y: auto !important;
            padding-right: 10px !important;
        }
    </style>
}
                                                                                                                                                                                                                                                                    