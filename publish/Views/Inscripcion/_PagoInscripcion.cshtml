    </div>

    <!-- Clave y dependencia -->
    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label fw-bold">Clave:</label>
            <input type="text" class="form-control" value="35" disabled>
        </div>
        <div class="col-md-6">
            <label class="form-label fw-bold">Dependencia:</label>
            <input type="text" class="form-control" value="COMISIÓN REGULADORA DE ENERGÍA" disabled>
        </div>
    </div>

    <!-- Periodo -->
    <div class="row mb-3">
        <div class="col-md-12">
            <label class="form-label fw-bold">Periodo:</label>
            <input type="text" class="form-control" value="Anual" disabled>
        </div>
    </div>

    <!-- Clave de referencia y cadena de dependencia -->
    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label fw-bold">Clave de Referencia:</label>
            <input type="text" class="form-control" value="357001857" disabled>
        </div>
        <div class="col-md-6">
            <label class="form-label fw-bold">Cadena de la Dependencia:</label>
            <input type="text" class="form-control" value="04079012110083" disabled>
