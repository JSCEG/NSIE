    <!-- Total a pagar -->
    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label fw-bold">Total a pagar:</label>
            <input type="text" class="form-control" value="$24,389.00" disabled>
        </div>
    </div>


    <!-- Botón para realizar el pago -->
    <div class="text-center my-5">
        <button type="button" id="btnPagar" class="btn btn-success btn-lg">Realizar Pago</button>
    </div>


    <!-- Mensaje de confirmación -->
    <div id="mensajeExito" class="alert alert-success text-center d-none" role="alert">
        <!-- Aquí se mostrarán los detalles del pago -->
    </div>
</section>


<script>
    document.getElementById("btnPagar").addEventListener("click", function () {
        // Cambiar el texto del botón y desactivarlo temporalmente
        var botonPagar = document.getElementById("btnPagar");
        botonPagar.innerHTML = "Procesando pago...";
        botonPagar.disabled = true;

        // Simular el tiempo de conexión con el banco (2 segundos)
        setTimeout(function () {
            // Obtener la fecha actual
            var fechaPago = new Date().toLocaleDateString();
            var concepto = "Inscripción al S-CEL";
            var monto = "$24,389.00";
            var entidadBancaria = "Entidad Bancaria: BBVA";
            var rs = "Gs Energia SAPI de CV";
            var rp = "Nombre del Representante Legal";

            // Mostrar mensaje de éxito con los detalles del pago
            var mensajeExito = document.getElementById("mensajeExito");
            mensajeExito.innerHTML = `
                <h4>¡Su pago ha sido realizado con éxito!</h4>
                <br>
                <p><strong>Raszón Social:</strong> ${rs}</p>
                  <p><strong>Representante Legal:</strong> ${rp}</p>
                <p><strong>Fecha del Pago:</strong> ${fechaPago}</p>
                <p><strong>Concepto:</strong> ${concepto}</p>
                <p><strong>Monto:</strong> ${monto}</p>
                <p><strong>Entidad Bancaria:</strong> ${entidadBancaria}</p>

            `;
            mensajeExito.classList.remove("d-none");

            // Cambiar el texto del botón nuevamente
            botonPagar.innerHTML = "Pago Realizado";
        }, 2000);
    });
</script>