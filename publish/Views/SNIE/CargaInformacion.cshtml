                                        `,
                        showConfirmButton: false,
                        allowOutsideClick: false,
                        didOpen: () => {
                            const bar = Swal.getHtmlContainer().querySelector('.progress-bar');
                            let progress = 0;
                            const timer = setInterval(() => {
                                progress += 5;
                                bar.style.width = `${progress}%`;
                                if (progress >= 100) {
                                    clearInterval(timer);
                                    resolve();
                                }
                            }, 100);
                        }
                    });
                });
            }

