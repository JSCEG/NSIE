<script>
// Funci√≥n para ocultar el overlay de carga
function hideLoadingOverlay() {
    const overlay = document.getElementById('powerbiOverlay');
    const iframe = document.getElementById('powerbiFrame');
    
    if (overlay && iframe) {
        setTimeout(() => {
            overlay.classList.add('hidden');
            iframe.style.display = 'block';
        }, 1500); // Peque√±o delay para mejor UX
    }
}

// Funci√≥n para pantalla completa
function toggleFullscreen() {
    const container = document.getElementById('powerbiContainer');
    
    if (!document.fullscreenElement) {
        container.requestFullscreen().then(() => {
            container.style.position = 'fixed';
            container.style.top = '0';
            container.style.left = '0';
            container.style.width = '100vw';
            container.style.height = '100vh';
            container.style.zIndex = '9999';
            container.style.paddingBottom = '0';
        }).catch(err => {
            console.log('Error al entrar en pantalla completa:', err);
        });
    } else {
        document.exitFullscreen();
    }
}

// Listener para salir de pantalla completa
document.addEventListener('fullscreenchange', function() {
    const container = document.getElementById('powerbiContainer');
    if (!document.fullscreenElement) {
        // Restaurar estilos originales
        container.style.position = '';
        container.style.top = '';
        container.style.left = '';
        container.style.width = '';
        container.style.height = '';
        container.style.zIndex = '';
        container.style.paddingBottom = '62.25%';
    }
});

// Funci√≥n para descargar reporte (placeholder)
function downloadReport() {
    Swal.fire({
        title: 'Descarga de An√°lisis',
        text: 'Esta funcionalidad estar√° disponible pr√≥ximamente.',
        icon: 'info',
        confirmButtonText: 'Entendido',
        confirmButtonColor: 'var(--snier-primary)'
    });
}

// Funci√≥n para compartir (placeholder)
function shareReport() {
    if (navigator.share) {
        navigator.share({
            title: 'Escenarios del Sector Energ√©tico - SNIER',
            text: 'Panel interactivo de escenarios energ√©ticos de referencia y proyecciones',
            url: window.location.href
        });
    } else {
        // Fallback para navegadores que no soportan Web Share API
        navigator.clipboard.writeText(window.location.href).then(() => {
            Swal.fire({
                title: 'Enlace Copiado',
                text: 'El enlace ha sido copiado al portapapeles',
                icon: 'success',
                timer: 2000,
                showConfirmButton: false
            });
        });
    }
}

// Inicializaci√≥n cuando el DOM est√© listo
document.addEventListener('DOMContentLoaded', function() {
    // Verificar si el iframe se carga correctamente
    const iframe = document.getElementById('powerbiFrame');
    
    // Timeout de seguridad para ocultar el loading si el iframe no responde
    setTimeout(() => {
        if (document.getElementById('powerbiOverlay').style.opacity !== '0') {
            hideLoadingOverlay();
        }
    }, 10000); // 10 segundos de timeout
    
    // Manejo responsive del iframe
    function adjustIframeHeight() {
        const container = document.getElementById('powerbiContainer');
        if (window.innerWidth <= 768) {
            container.style.paddingBottom = '75%';
        } else if (window.innerWidth <= 576) {
            container.style.paddingBottom = '80%';
        } else {
            container.style.paddingBottom = '62.25%';
        }
    }
    
    // Ajustar al cargar y al redimensionar
    adjustIframeHeight();
    window.addEventListener('resize', adjustIframeHeight);
});
</script>
