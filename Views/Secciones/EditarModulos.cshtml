@model NSIE.Models.SeccionConModulos
@using NSIE.Models
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = $"M√≥dulos de la Secci√≥n: {Model.Titulo}";
}

@Html.AntiForgeryToken()

<div class="text-center mb-4">
    <h3 class="cp-section cp-grouping-section">
        <img src="@Cdn.Url/img_snier/vistas/iconos/modulos.png" class="iconomenu" alt="M√≥dulos">
        @ViewData["Title"]
    </h3>
</div>

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
        <li class="breadcrumb-item"><a asp-controller="Secciones" asp-action="Index">Secciones</a></li>
        <li class="breadcrumb-item active" aria-current="page">M√≥dulos</li>
    </ol>
</nav>

<!-- Informaci√≥n de la secci√≥n y bot√≥n nuevo m√≥dulo -->
<div class="row mb-4">
    <div class="col-md-8">
        <div class="alert alert-info">
            <h5 class="mb-1">
                <i class="fas fa-layer-group text-primary"></i>
                @Model.Titulo
            </h5>
            <p class="mb-0">Total de M√≥dulos: @Model.Modulos.Count()</p>
        </div>
    </div>
    <div class="col-md-4 text-end">
        <button class="btn btn-success btn-lg" onclick="abrirModalNuevoModulo()">
            <i class="bi bi-plus-circle"></i> Nuevo M√≥dulo
        </button>
    </div>
</div>

<!-- Tabla de M√≥dulos con DataTables (SIN card wrapper) -->
@if (Model.Modulos.Any())
{
    <table id="tablaModulos" class="table table-striped table-hover w-100">
        <thead class="table-dark">
            <tr>
                <th style="width:5%">#</th>
                <th style="width:25%">T√≠tulo</th>
                <th style="width:20%">Descripci√≥n</th>
                <th style="width:8%">Orden</th>
                <th style="width:10%">Vistas</th>
                <th style="width:8%">Activo</th>
                <th style="width:24%">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var modulo in Model.Modulos.OrderBy(m => m.Orden))
            {
                <tr>
                    <td>@modulo.Orden</td>
                    <td>
                        <strong>@modulo.Title</strong>
                    </td>
                    <td>
                        <small class="text-muted">@modulo.Desc</small>
                    </td>
                    <td>
                        <span class="badge bg-secondary">@modulo.Orden</span>
                    </td>
                    <td>
                        <!-- NUEVO: Mostrar n√∫mero de vistas directamente -->
                        <div class="d-flex align-items-center">
                            <span class="badge bg-info me-2" id="contador-@modulo.Id">
                                <i class="fas fa-spinner fa-spin"></i>
                            </span>
                            <a asp-action="EditarVistas" asp-route-moduloId="@modulo.Id" class="btn btn-sm btn-outline-primary"
                                title="Ver y editar vistas del m√≥dulo">
                                <i class="fas fa-eye"></i> Ver
                            </a>
                        </div>
                    </td>
                    <td>
                        <span class="badge @(modulo.Activo ? "bg-success" : "bg-danger")">
                            @(modulo.Activo ? "S√≠" : "No")
                        </span>
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <!-- Bot√≥n Editar M√≥dulo -->
                            <button class="btn btn-sm btn-outline-warning" onclick="abrirModalEditarModulo(@modulo.Id)"
                                title="Editar m√≥dulo">
                                <i class="fas fa-edit"></i>
                            </button>

                            <!-- Bot√≥n Ver/Editar Vistas -->
                            <a asp-action="EditarVistas" asp-route-moduloId="@modulo.Id" class="btn btn-sm btn-outline-primary"
                                title="Gestionar vistas del m√≥dulo">
                                <i class="fas fa-list"></i> Vistas
                            </a>

                            <!-- Bot√≥n Eliminar -->
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="eliminarModuloAjax(@modulo.Id)"
                                title="Eliminar m√≥dulo">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        <strong>Sin m√≥dulos registrados</strong><br>
        No hay m√≥dulos registrados para esta secci√≥n. Haz clic en "Nuevo M√≥dulo" para agregar el primero.
    </div>
}

<!-- Modal para crear/editar m√≥dulo -->
<div class="modal fade" id="moduloModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div id="contenidoModalModulo">
                <!-- Aqu√≠ se carga el contenido din√°mico -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables CSS y JS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        let moduloModal;
        let tablaModulos;

        $(document).ready(function () {
            // Inicializar modal
            moduloModal = new bootstrap.Modal(document.getElementById('moduloModal'));

            // Inicializar DataTable
            tablaModulos = $('#tablaModulos').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                "responsive": true,
                "pageLength": 10,
                "order": [[0, "asc"]], // Ordenar por columna Orden
                "columnDefs": [
                    { "orderable": false, "targets": [6] }, // Deshabilitar ordenamiento en columna Acciones
                    { "searchable": false, "targets": [3, 4, 5, 6] } // Solo buscar en t√≠tulo y descripci√≥n
                ]
            });

            // Cargar contador de vistas para cada m√≥dulo
            cargarContadoresVistas();
        });

        function cargarContadoresVistas() {
                                        @foreach (var modulo in Model.Modulos)
                {
                    <text>
                        cargarContadorVistas(@modulo.Id);
                    </text>
            }
                                    }

        function cargarContadorVistas(moduloId) {
            $.ajax({
                url: '@Url.Action("ContarVistas", "Secciones")',
                data: { moduloId: moduloId },
                method: 'GET',
                timeout: 5000,
                success: function (count) {
                    console.log('‚úÖ Contador para m√≥dulo ' + moduloId + ': ' + count);

                    const $badge = $("#contador-" + moduloId);
                    if ($badge.length) {
                        // Actualizar contenido del badge
                        $badge.html(count + ' vista' + (count === 1 ? '' : 's'));

                        // Cambiar color seg√∫n cantidad
                        $badge.removeClass('bg-info bg-success bg-secondary bg-warning');
                        if (count === 0) {
                            $badge.addClass('bg-secondary');
                        } else if (count <= 3) {
                            $badge.addClass('bg-info');
                        } else if (count <= 6) {
                            $badge.addClass('bg-success');
                        } else {
                            $badge.addClass('bg-warning');
                        }
                    }
                },
                error: function (xhr, status, error) {
                    console.error('‚ùå Error cargando contador para m√≥dulo ' + moduloId + ':', {
                        status: status,
                        error: error,
                        response: xhr.responseText
                    });

                    const $badge = $("#contador-" + moduloId);
                    if ($badge.length) {
                        $badge.html('Error');
                        $badge.removeClass('bg-info').addClass('bg-danger');
                    }
                }
            });
        }

        function abrirModalNuevoModulo() {
            const url = '@Url.Action("CrearModulo", "Secciones", new { seccionId = Model.Id })';
            cargarModalModulo(url);
        }

        function abrirModalEditarModulo(moduloId) {
            const url = '@Url.Action("ModalEditarModulo", "Secciones")?id=' + moduloId;
            cargarModalModulo(url);
        }

        function cargarModalModulo(url) {
            $.get(url)
                .done(function (html) {
                    $('#contenidoModalModulo').html(html);
                    moduloModal.show();
                })
                .fail(function (xhr, status, error) {
                    console.error('Error cargando modal:', error);
                    Swal.fire('Error', 'Error al cargar el modal: ' + error, 'error');
                });
        }

        function eliminarModuloAjax(moduloId) {
            Swal.fire({
                title: '¬øEliminar m√≥dulo?',
                text: "Esta acci√≥n eliminar√° el m√≥dulo y todas sus vistas asociadas",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'S√≠, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Buscar el token de m√∫ltiples formas
                    let token = $('input[name="__RequestVerificationToken"]').val();

                    // Si no se encuentra, buscar en forms
                    if (!token) {
                        token = $('form input[name="__RequestVerificationToken"]').val();
                    }

                    // Si a√∫n no se encuentra, buscar en cualquier lugar
                    if (!token) {
                        token = $('input[name*="RequestVerificationToken"]').val();
                    }

                    console.log('üîç Debug info:');
                    console.log('- Token encontrado:', token ? 'S√ç' : 'NO');
                    console.log('- Token value:', token);
                    console.log('- M√≥dulo ID:', moduloId);
                    console.log('- Secci√≥n ID:', '@Model.Id');

                    // Preparar los datos
                    const postData = {
                        id: moduloId,
                        seccionId: '@Model.Id'
                    };

                    // Solo agregar token si existe
                    if (token) {
                        postData.__RequestVerificationToken = token;
                    }

                    console.log('- Datos a enviar:', postData);

                    $.ajax({
                        url: '@Url.Action("EliminarModulo", "Secciones")',
                        method: 'POST',
                        data: postData,
                        success: function (data) {
                            console.log('‚úÖ M√≥dulo eliminado exitosamente:', data);
                            Swal.fire({
                                title: '¬°Eliminado!',
                                text: data.mensaje || 'M√≥dulo eliminado correctamente',
                                icon: 'success',
                                timer: 2000,
                                showConfirmButton: false
                            }).then(() => {
                                location.reload();
                            });
                        },
                        error: function (xhr, status, error) {
                            console.error('‚ùå Error completo:', {
                                status: xhr.status,
                                statusText: xhr.statusText,
                                responseText: xhr.responseText,
                                error: error,
                                readyState: xhr.readyState
                            });

                            let mensaje = 'Error al eliminar el m√≥dulo';

                            if (xhr.status === 400) {
                                mensaje = 'Token de verificaci√≥n inv√°lido o datos incorrectos';
                            } else if (xhr.status === 404) {
                                mensaje = 'M√≥dulo no encontrado';
                            } else if (xhr.status === 500) {
                                mensaje = 'Error interno del servidor';
                            }

                            Swal.fire({
                                title: 'Error',
                                text: mensaje,
                                icon: 'error',
                                footer: xhr.responseText ? 'Detalles: ' + xhr.responseText : ''
                            });
                        }
                    });
                }
            });
        }

        // Funci√≥n para recargar contadores despu√©s de operaciones CRUD
        function recargarContadores() {
            setTimeout(function () {
                cargarContadoresVistas();
            }, 500);
        }
    </script>
}
