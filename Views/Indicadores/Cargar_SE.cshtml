<div class="container">


    <br />
    <br />

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="file">Selecciona el archivo CSV:</label>
            <input type="file" id="file" name="file" class="form-control" asp-for="File" />
