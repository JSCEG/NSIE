@using System.Data  
@model DataTable
@{
    ViewData["Title"] = "ListaUsuarios";
    
   }
    

@*//[id],[Usuario],[Email],[EmailNormalizado],[PasswordHash]*@
<h1 class="display-4  titulo fw-bold"> <i class="bi bi-person-fill-check"></i> - Lista de Usuarios MEP</h1>
<br />

<div class="table-responsive p-5">
<table id="miTabla" class="table  table-hover" style="width:100%">
    <thead>
        <tr>
          <th>ID</th>
            <th>Usuario</th>
            <th>Email</th>
            <th>Email Normalizado</th>
            <th>PasswordHash</th>
           
        </tr>
    </thead>
    <tbody>
       @foreach (DataRow usuarios in Model.Rows )
        {
         <tr>
                             
            <td>
                @Convert.ToString(usuarios["id"])
            </td>     
            <td>
                @Convert.ToString(usuarios["Usuario"])
            </td>
            <td>
                 @Convert.ToString(usuarios["Email"])
            </td>
            <td>
                 @Convert.ToString(usuarios["EmailNormalizado"])
                </td>
            <td>
                 @Convert.ToString(usuarios["PasswordHash"]) 
                <a href="https://www.notion.so/js-/Proyecto-VIPEX-Sistema-de-Visualizaci-n-de-Condici-n-de-Permisos-de-Expendio-3c7713be60a74673aa9e447d9387b31d" target="_blank"><i class="bi bi-arrow-down-square-fill"></i> - Bajar Informe</a></td>
        </tr>

        }
           
        

    </tbody>
 </table>

 </div>

 <link href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet"/>
  <link href="//cdn.datatables.net/buttons/2.3.6/css/buttons.dataTables.min.css" rel="stylesheet"/>
 
 
 @section scripts{
     <script src="//code.jquery.com/jquery-3.5.1.js"> </script>
     <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"> </script>
     <script src="//cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
     <script src="//cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"> </script>
     <script src="//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
     <script src="//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
     <script src="//cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>



     <script>
	$(document).ready(function() {
    $('#miTabla').DataTable( {
        dom: 'Bfrtip',
        buttons: [
            'copyHtml5',
            'excelHtml5',
            'csvHtml5',
            'pdfHtml5'
        ]
    } );
} );
	</script>
 }