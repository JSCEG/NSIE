                    xAxis: { categories: [] },
                    yAxis: { title: null },
                    series: [{ name: 'Emisiones', data: [] }],
                    credits: { enabled: false },
                    legend: { enabled: false }
                });

                /* 3. Botón “Actualizar” con popup     */
                document.getElementById('actualizarGrafico')
                    .addEventListener('click', () => refreshCharts(true));

                /* 4. Primera carga silenciosa + refresco cada 60 s */
                refreshCharts(false);                   // sin popup
                setInterval(() => refreshCharts(false), 60000);
            }

            /* --------------------------------------------------------------------
             * FUNCIÓN: genera y dibuja datos demo
             * @@param mostrarPopup(bool) => si true, lanza SweetAlert
                * ------------------------------------------------------------------ */
            function refreshCharts(mostrarPopup = false) {

                /* 1. Lectura de filtros */
                const tipo = document.getElementById('tipoIndicador').value; // produccion, consumo…
                const periodo = document.getElementById('periodo').value;       // anual, trimestral, mensual

                /* 2. Categorías y series sintéticas */
                const categories = generarCategorias(periodo);
                const serieA = generarSerieAleatoria(categories.length, 25000, 45000);
                const serieB = generarSerieAleatoria(categories.length, 18000, 30000);

                /* 3. Actualiza el gráfico principal */
                mainChart.update({
                    xAxis: { categories },
                    series: [{
                        name: nombreSerieA(tipo),
                        data: serieA
                    }, {
                        name: nombreSerieB(tipo),
                        data: serieB
                    }]
                }, true, true, false);   // redraw=true, oneToOne=true, animation=false

                /* 4. Mini-gráficos sincronizados */
                miniChart1.series[0].setData([
                    rand(5000, 20000), rand(5000, 20000), rand(1000, 6000), rand(1000, 6000)
                ]);

                miniChart2.update({
                    series: [{
                        data: [
                            { name: 'Industrial', y: rand(30, 50) },
                            { name: 'Residencial', y: rand(20, 40) },
                            { name: 'Comercial', y: rand(10, 20) },
                            { name: 'Otros', y: rand(5, 15) }
                        ]
                    }]
                });

                miniChart3.update({
                    xAxis: { categories },
                    series: [{ name: 'Emisiones', data: generarSerieAleatoria(categories.length, 80, 140) }]
                });

                /* 5. Fecha/hora de la última actualización */
                document.getElementById('chartLastUpdate').textContent =
                    `Última actualización: ${new Date().toLocaleString()}`;

                /* 6. Popup opcional solo al pulsar el botón */
                if (mostrarPopup) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Datos demo actualizados',
                        timer: 1200,
                        showConfirmButton: false
                    });
                }
            }

            /* --------------------------------------------------------------------
             * UTILIDADES DE DATOS DEMO
             * ------------------------------------------------------------------ */
            function generarCategorias(periodo) {
                const ahora = new Date();
                const year = ahora.getFullYear();

                if (periodo === 'anual') {
                    return [year - 4, year - 3, year - 2, year - 1, year].map(String);
                }

                if (periodo === 'trimestral') {
                    const out = [];
                    for (let y = year - 1; y <= year; y++) {
                        ['Q1', 'Q2', 'Q3', 'Q4'].forEach(q => out.push(`${y}-${q}`));
                    }
                    return out;
                }

                /* mensual → 12 meses abreviados */
                return ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'];
            }

            function generarSerieAleatoria(n, min, max) {
                return Array.from({ length: n }, () => rand(min, max));
            }

            function rand(min, max) {
                return Math.floor(Math.random() * (max - min + 1)) + min;
            }

            function nombreSerieA(tipo) {
                switch (tipo) {
                    case 'consumo': return 'Energía Consumida';
                    case 'renovable': return 'Capacidad Renovable';
                    case 'precios': return 'Precio Promedio';
                    default: return 'Energía Eléctrica';
                }
            }
            function nombreSerieB(tipo) {
                switch (tipo) {
                    case 'consumo': return 'Picos de Demanda';
                    case 'renovable': return 'Instalaciones';
                    case 'precios': return 'Tarifa Residencial';
                    default: return 'Hidrocarburos';
                }
            }

        })();
