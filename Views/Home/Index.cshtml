                });

                miniChart2 = Highcharts.chart('miniChart2', {
                    chart: { type: 'pie', height: 150 },
                    title: null,
                    plotOptions: { pie: { dataLabels: { enabled: false } } },
                    series: [{ name: 'Consumo', data: [] }],
                    credits: { enabled: false },
                    legend: { enabled: false }
                });

                miniChart3 = Highcharts.chart('miniChart3', {
                    chart: { type: 'areaspline', height: 150 },
