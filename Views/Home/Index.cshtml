@section Scripts {
    <script>
        // Función para mostrar ayuda del módulo (existente)
        function mostrarAyudaModulo(infoJson) {
            try {
                const info = typeof infoJson === 'string' ? JSON.parse(infoJson) : infoJson;
                const html = `
                                                                                                <div class="text-start">
                                                                                                    ${info.description ? `<p><strong>${info.description}</strong></p>` : ''}
                                                                                                    ${info.functionality ? `<p><i class='fas fa-cogs me-2'></i> ${info.functionality}</p>` : ''}
                                                                                                    ${info.stage ? `<p><i class='fas fa-layer-group me-2'></i> Etapa: ${info.stage}</p>` : ''}
                                                                                                    ${info.roles?.length ? `
                                                                                                        <ul class="mb-3">
                                                                                                            ${info.roles.map(r => `<li><i class="fas fa-${r.icon} me-2 text-primary"></i> ${r.text}</li>`).join('')}
                                                                                                        </ul>` : ''}
                                                                                                    ${info.order ? `<p><i class='fas fa-sort-amount-up me-2'></i> Paso ${info.order.step}: ${info.order.description}</p>` : ''}
                                                                                                    ${info.manualUrl ? `<a href="${info.manualUrl}" class="btn btn-sm btn-primary mt-2" target="_blank"><i class="fas fa-download me-2"></i>Descargar manual</a>` : ''}
                                                                                                </div>`;

                Swal.fire({
                    title: info.title || 'Ayuda del módulo',
                    html: html,
                    confirmButtonText: 'Cerrar',
                    confirmButtonColor: '#6c757d',
                    backdrop: true,
                    width: '600px'
                });
            } catch (e) {
                console.error("Error al mostrar ayuda del módulo:", e);
                Swal.fire('Error', 'No se pudo cargar la información del módulo', 'error');
            }
        }

