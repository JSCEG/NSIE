@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@using NSIE.Models
@inject IHttpContextAccessor HttpContextAccessor

@{
    var httpContext = HttpContextAccessor.HttpContext;
    var perfilUsuarioJson = httpContext.Session.GetString("PerfilUsuario");
    var perfilUsuario = JsonConvert.DeserializeObject<PerfilUsuario>(perfilUsuarioJson);
    ViewData["NombreUsuario"] = perfilUsuario.Nombre;
    ViewData["RolUsuario"] = perfilUsuario.Rol;
    ViewData["Title"] = "Avance de Metas y Líneas de Acción";
}

<div class="text-center mb-4">
    <h3 class="cp-section cp-grouping-section">
        <img src="~/img/modulos/metas_consejo.png" alt="Avance Metas" class="iconomenu">
        @ViewData["Title"]
        <button class="btn btn-link text-info" onclick="mostrarAyudaModulo()" data-bs-toggle="tooltip"
            title="¿Qué es este módulo?">
            <i class="fas fa-question-circle fa-lg"></i>
        </button>
    </h3>
    <div class="text-muted mt-2 text-justify px-5">
        <i class="fas fa-info-circle text-primary"></i>
        <em>Evalúa resultados frente al Programa Anual, facilitando el seguimiento de compromisos.</em>
    </div>
</div>

<div class="alert alert-light mb-4" role="alert">
    <nav aria-label="breadcrumb" style="padding-left:15px">
        <ol class="breadcrumb lp-5">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="container-fluid ps-5 pe-5">
    <!-- Fundamento Legal -->
    <div class="alert alert-success mb-4" role="alert">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <img src="~/img/iconos/legal_foundations.png" alt="Fundamento Legal" class="img-fluid">
            </div>
            <div class="col-md-10">
                <h5 class="alert-heading mb-2">
                    <i class="fas fa-book-reader"></i> Fundamento Legal
                </h5>
                <p class="mb-1 text-justify">
                    <span class="badge bg-primary" data-bs-toggle="tooltip"
                        title="El Consejo evaluará el cumplimiento del Programa Anual">
                        Art. 76 RLPT
                    </span>
                    <span class="badge bg-info ms-2" data-bs-toggle="tooltip"
                        title="Seguimiento obligatorio a través del Informe Anual">
                        Art. 45 Lineamientos
                    </span>
                </p>
                <hr>
                <p class="mb-0 small text-justify">
                    <i class="fas fa-info-circle"></i>
                    El seguimiento y evaluación del Programa Anual permite medir el cumplimiento de objetivos y
                    metas establecidas, siendo fundamental para la rendición de cuentas del Consejo.
                </p>
            </div>
        </div>
    </div>

    <!-- Filtros de período -->
    <div class="row mb-4">
        <div class="col-md-4">
            <label class="form-label">
                <i class="fas fa-filter"></i> Filtrar por Trimestre
            </label>
            <select class="form-select" id="selectTrimestre">
                <option value="1">Primer Trimestre 2024</option>
                <option value="2">Segundo Trimestre 2024</option>
                <option value="3">Tercer Trimestre 2024</option>
                <option value="4">Cuarto Trimestre 2024</option>
            </select>
        </div>
        <div class="col-md-8 text-end">
            <button class="btn btn-primary" onclick="exportarInforme()">
                <i class="fas fa-file-export"></i> Exportar Informe
            </button>
        </div>
    </div>

    <!-- KPIs directos -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="d-flex justify-content-between align-items-center bg-white p-4 rounded shadow-sm">
                <div>
                    <div class="h2 mb-0">60%</div>
                    <div class="text-muted">Avance General</div>
                </div>
                <i class="fas fa-tachometer-alt fa-2x text-primary"></i>
            </div>
        </div>
        <!-- Otros KPIs similares -->
    </div>

    <!-- Gráficos de avance -->
    <div class="row mb-4">
        <div class="col-12">
            <h5 class="mb-3">
                <i class="fas fa-chart-line"></i> Avance por Línea de Acción
            </h5>
            <div id="graficoLineasAccion" class="bg-white p-3 rounded" style="height: 400px"></div>
        </div>
    </div>

    <!-- Tabla de seguimiento -->
    <div class="row">
        <div class="col-12">
            <h5 class="mb-3">
                <i class="fas fa-tasks"></i> Detalle de Avances
            </h5>
            <div class="table-responsive bg-white rounded p-3">
                <table class="table mb-0">
                    <!-- Contenido de la tabla -->
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script>
