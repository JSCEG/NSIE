@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@using NSIE.Models
@inject IHttpContextAccessor HttpContextAccessor

@{
    var httpContext = HttpContextAccessor.HttpContext;
    var perfilUsuarioJson = httpContext.Session.GetString("PerfilUsuario");
    var perfilUsuario = JsonConvert.DeserializeObject<PerfilUsuario>(perfilUsuarioJson);
    ViewData["NombreUsuario"] = perfilUsuario.Nombre;
    ViewData["RolUsuario"] = perfilUsuario.Rol;
    ViewData["Title"] = "Orden del Día y Convocatorias";
}
<div class="text-center mb-4">
    <h3 class="cp-section cp-grouping-section">
        <img src="@Cdn.Url/img_snier/vistas/modulos/convocatorias.png" alt="Orden del Día" class="iconomenu">
        @ViewData["Title"]
        <button class="btn btn-link text-info" onclick="mostrarAyudaModulo()" data-bs-toggle="tooltip"
            title="¿Qué es este módulo?">
            <i class="fas fa-question-circle fa-lg"></i>
        </button>
    </h3>
    <div class="text-muted mt-2 text-justify px-5">
        <i class="fas fa-info-circle text-primary"></i>
        <em>Gestiona las convocatorias y documentación asociada a las sesiones del Consejo.</em>
    </div>
</div>

<!-- Contenedor principal estandarizado -->
<div class="container-fluid ps-5 pe-5">

    <!-- Breadcrumb -->
    <div class="alert alert-light mb-4" role="alert">
        <nav aria-label="breadcrumb" style="padding-left:15px">
            <ol class="breadcrumb lp-5">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
        </nav>
    </div>

    <!-- Fundamento Legal -->
    <div class="alert alert-success mb-4" role="alert">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <img src="@Cdn.Url/img_snier/vistas/iconos/legal_foundations.png" alt="Fundamento Legal" class="img-fluid">
            </div>
            <div class="col-md-10">
                <h5 class="alert-heading mb-2">
                    <i class="fas fa-book-reader"></i> Fundamento Legal
                </h5>
                <p class="mb-1 text-justify">
                    <span class="badge bg-primary" data-bs-toggle="tooltip"
                        title="Estructura y funcionamiento de las sesiones">
                        Art. 76 RLPT
                    </span>
                    <span class="badge bg-info ms-2" data-bs-toggle="tooltip"
                        title="Lineamientos para convocatorias y documentación">
                        Arts. 14-17 Lineamientos
                    </span>
                </p>
                <hr>
                <p class="mb-0 small text-justify">
                    <i class="fas fa-info-circle"></i>
                    La gestión de convocatorias y documentación de sesiones es fundamental para la
                    operación del Consejo, asegurando el cumplimiento de los requisitos normativos
                    y la efectividad de las sesiones.
                </p>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function mostrarAyudaModulo() {
            Swal.fire({
                title: 'Orden del Día y Convocatorias',
                html: `
                                                    <div class="text-start">
                                                        <div class="mb-4">
                                                            <h6 class="border-bottom pb-2">
                                                                <i class="fas fa-info-circle"></i> Descripción
                                                            </h6>
                                                            <p>Gestiona las convocatorias y documentación para las sesiones del Consejo.</p>
                                                        </div>

                                                        <div class="mb-4">
                                                            <h6 class="border-bottom pb-2">
                                                                <i class="fas fa-tasks"></i> Funcionalidad
                                                            </h6>
                                                            <p>Permite consultar y gestionar convocatorias, orden del día y documentos de sesiones.</p>
                                                        </div>

                                                        <div class="mb-4">
                                                            <h6 class="border-bottom pb-2">
                                                                <i class="fas fa-sync-alt"></i> Etapa del Ciclo
                                                            </h6>
                                                            <p>Preparación de sesión</p>
                                                        </div>

                                                        <div class="mb-4">
                                                            <h6 class="border-bottom pb-2">
                                                                <i class="fas fa-users-cog"></i> Interacción entre Roles
                                                            </h6>
                                                            <ul class="list-unstyled">
                                                                <li><i class="fas fa-paper-plane text-primary"></i> Secretaría Técnica: Convoca</li>
                                                                <li><i class="fas fa-check-double text-success"></i> Presidencia: Valida contenido</li>
                                                                <li><i class="fas fa-file-alt text-info"></i> Consejo: Revisa documentos</li>
                                                            </ul>
                                                        </div>

                                                        <div class="mb-4">
                                                            <h6 class="border-bottom pb-2">
                                                                <i class="fas fa-puzzle-piece"></i> Elementos
                                                            </h6>
                                                            <ul class="list-unstyled">
                                                                <li><i class="fas fa-list text-primary"></i> Lista de sesiones</li>
                                                                <li><i class="fas fa-file-pdf text-danger"></i> Actas y anexos</li>
                                                                <li><i class="fas fa-calendar-alt text-success"></i> Agenda</li>
                                                                <li><i class="fas fa-history text-info"></i> Histórico de convocatorias</li>
                                                            </ul>
                                                        </div>

                                                        <div class="mb-4">
                                                            <h6 class="border-bottom pb-2">
                                                                <i class="fas fa-balance-scale"></i> Fundamento Legal
                                                            </h6>
                                                            <p>
                                                                <span class="badge bg-primary">Art. 76 RLPT</span>
                                                                <span class="badge bg-info ms-2">Arts. 14-17 Lineamientos</span>
                                                            </p>
                                                            <small class="text-muted">Define estructura y operación de sesiones.</small>
                                                        </div>

                                                        <div class="mb-4">
                                                            <h6 class="border-bottom pb-2">
                                                                <i class="fas fa-star"></i> Importancia
                                                            </h6>
                                                            <p class="mb-0">
                                                                Asegura la correcta preparación y documentación de las sesiones del Consejo, 
                                                                siendo clave para la toma de decisiones efectiva.
                                                            </p>
                                                        </div>

                                                        <div>
                                                            <h6 class="border-bottom pb-2">
                                                                <i class="fas fa-check-double"></i> Orden en el Ciclo
                                                            </h6>
                                                            <p class="mb-0">
                                                                <span class="badge bg-info">Paso 3</span>
                                                                <span class="ms-2">
                                                                    Define la agenda y estructura de cada sesión, incluyendo calendario y 
                                                                    documentos clave para la operación del Consejo.
                                                                </span>
                                                            </p>
                                                        </div>
                                                    </div>
                                                `,
                width: 'auto',
                maxWidth: '400px',
                customClass: {
                    container: 'text-start',
                    popup: 'swal-responsive',
                    htmlContainer: 'swal-scrollable'
                },
                confirmButtonText: 'Entendido'
            });
        }
    </script>
}

<style>
    /* Estilos para el modal de ayuda responsivo */
    .swal-responsive {
        margin: 1rem !important;
        max-height: 90vh !important;
        max-width: 400px !important;
    }

    .swal-scrollable {
        max-height: calc(90vh - 200px) !important;
        overflow-y: auto !important;
        padding-right: 10px !important;
    }

    /* Personalización del scrollbar */
    .swal-scrollable::-webkit-scrollbar {
        width: 6px;
    }

    .swal-scrollable::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 3px;
    }

    .swal-scrollable::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 3px;
    }

    .swal-scrollable::-webkit-scrollbar-thumb:hover {
        background: #555;
    }
</style>