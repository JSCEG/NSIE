@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@using NSIE.Models
@inject IHttpContextAccessor HttpContextAccessor

@{
    var httpContext = HttpContextAccessor.HttpContext;
    var perfilUsuarioJson = httpContext.Session.GetString("PerfilUsuario");
    var perfilUsuario = JsonConvert.DeserializeObject<PerfilUsuario>(perfilUsuarioJson);
    ViewData["NombreUsuario"] = perfilUsuario.Nombre;
    ViewData["RolUsuario"] = perfilUsuario.Rol;
    ViewData["Title"] = "Acuerdos de Coordinación";
}

<div class="text-center mb-4">
    <h3 class="cp-section cp-grouping-section">
        <img src="~/img/modulos/acuerdos_coordinacion.png" alt="Acuerdos" class="iconomenu">
        @ViewData["Title"]
        <button class="btn btn-link text-info" onclick="mostrarAyudaModulo()" data-bs-toggle="tooltip"
            title="¿Qué es este módulo?">
            <i class="fas fa-question-circle fa-lg"></i>
        </button>
    </h3>
    <div class="text-muted mt-2 text-justify px-5">
        <i class="fas fa-info-circle text-primary"></i>
        <em>Sistema de seguimiento y monitoreo del cumplimiento de los acuerdos aprobados por el Consejo.</em>
    </div>
</div>

<div class="alert alert-light mb-4" role="alert">
    <nav aria-label="breadcrumb" style="padding-left:15px">
        <ol class="breadcrumb lp-5">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>
<div class="container-fluid ps-5 pe-5">
    <div class="alert alert-success mb-4" role="alert">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <img src="~/img/iconos/legal_foundations.png" alt="Fundamento Legal" class="img-fluid">
            </div>
            <div class="col-md-10">
                <h5 class="alert-heading mb-2">
                    <i class="fas fa-book-reader"></i> Fundamento Legal
                </h5>
                <p class="mb-1 text-justify">
                    <span class="badge bg-primary" data-bs-toggle="tooltip" title="Establece el proceso de seguimiento">
                        Arts. 71 y 76 RLPT
                    </span>
                    <span class="badge bg-info ms-2" data-bs-toggle="tooltip"
                        title="Define el proceso de seguimiento a acuerdos">
                        Arts. 28-34 Lineamientos
                    </span>
                </p>
                <hr>
                <p class="mb-0 small text-justify">
                    <i class="fas fa-info-circle"></i>
                    El seguimiento de acuerdos es esencial para asegurar el cumplimiento de las
                    decisiones del Consejo y su implementación efectiva.
                </p>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function mostrarAyudaModulo() {
            Swal.fire({
                title: 'Acuerdos de Coordinación',
                html: `
                                    <div class="text-start">
                                        <div class="mb-4">
                                            <h6 class="border-bottom pb-2">
                                                <i class="fas fa-info-circle"></i> Descripción
                                            </h6>
                                            <p>Sistema de seguimiento para los acuerdos aprobados por el Consejo.</p>
                                        </div>

                                        <div class="mb-4">
                                            <h6 class="border-bottom pb-2">
                                                <i class="fas fa-tasks"></i> Funcionalidad
                                            </h6>
                                            <p>Permite consultar y monitorear el cumplimiento de acuerdos formales.</p>
                                        </div>

                                        <div class="mb-4">
                                            <h6 class="border-bottom pb-2">
                                                <i class="fas fa-sync-alt"></i> Etapa del Ciclo
                                            </h6>
                                            <p>Seguimiento de acuerdos</p>
                                        </div>

                                        <div class="mb-4">
                                            <h6 class="border-bottom pb-2">
                                                <i class="fas fa-users-cog"></i> Interacción entre Roles
                                            </h6>
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-search text-primary"></i> Consejo: Consulta y verifica</li>
                                                <li><i class="fas fa-tasks text-success"></i> Responsables: Actualizan estatus</li>
                                            </ul>
                                        </div>

                                        <div class="mb-4">
                                            <h6 class="border-bottom pb-2">
                                                <i class="fas fa-puzzle-piece"></i> Elementos
                                            </h6>
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-columns text-primary"></i> Panel de seguimiento</li>
                                                <li><i class="fas fa-user-check text-success"></i> Responsables asignados</li>
                                                <li><i class="fas fa-calendar-check text-info"></i> Fechas de cumplimiento</li>
                                            </ul>
                                        </div>

                                        <div class="mb-4">
                                            <h6 class="border-bottom pb-2">
                                                <i class="fas fa-star"></i> Importancia
                                            </h6>
                                            <p class="mb-0">
                                                Asegura la implementación efectiva de las decisiones del Consejo mediante
                                                un seguimiento sistemático de los acuerdos aprobados.
                                            </p>
                                        </div>

                                        <div>
                                            <h6 class="border-bottom pb-2">
                                                <i class="fas fa-check-double"></i> Orden en el Ciclo
                                            </h6>
                                            <p class="mb-0">
                                                <span class="badge bg-secondary"> Paso 6</span>
                                                <span class="ms-2">
                                                    Facilita el monitoreo del cumplimiento de los acuerdos aprobados
                                                    en sesiones anteriores, cerrando el ciclo de gestión.
                                                </span>
                                            </p>
                                        </div>
                                    </div>
                                `,
                width: 'auto',
                maxWidth: '400px',
                customClass: {
                    container: 'text-start',
                    popup: 'swal-responsive',
                    htmlContainer: 'swal-scrollable'
                },
                confirmButtonText: 'Entendido'
            });
        }
    </script>

    <style>
        .swal-responsive {
            margin: 1rem !important;
            max-height: 90vh !important;
            max-width: 400px !important;
        }

        .swal-scrollable {
            max-height: calc(90vh - 200px) !important;
            overflow-y: auto !important;
            padding-right: 10px !important;
        }
    </style>
}