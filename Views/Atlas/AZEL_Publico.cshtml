                            }
                            let latlng = null;
                            kmlLayer.eachLayer(function (layer) {
                                if (!latlng) {
                                    if (layer.getLatLng) {
                                        latlng = layer.getLatLng();
                                    } else if (layer.getBounds) {
                                        latlng = layer.getBounds().getCenter();
                                    }
