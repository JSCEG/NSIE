                            });
                            if (latlng) {
                                // Icono especial (puedes personalizar la URL)
                                    const icon = L.icon({
                                        iconUrl: proxySolicitudImg,
                                        iconSize: [36, 36],
                                        iconAnchor: [18, 36],
                                        popupAnchor: [0, -36]
                                    });
                                kmlProjectMarker = L.marker(latlng, { icon: icon }).addTo(mapas[0]);
                                kmlProjectMarker.bindPopup('<b>' + nombreProyecto + '</b>');
