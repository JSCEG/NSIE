<div class="alert alert-success mb-4" role="alert">
    <div class="row align-items-center">
        <div class="col-md-2 text-center">
            <img src="@Cdn.Url/img_snier/vistas/iconos/legal_foundations.png" alt="Fundamento Legal" class="img-fluid">
        </div>
        <div class="col-md-10">
            <h5 class="alert-heading mb-2">
                <i class="fas fa-book-reader"></i> Fundamento Legal
            </h5>
            <p class="mb-1 text-justify">
                @foreach (var articulo in Model.Articulos.Split(','))
                {
                    <span class="badge bg-primary me-1" data-bs-toggle="tooltip" title="@Model.FundamentoLegal">
                        @articulo.Trim()
                    </span>
                }
            </p>
            <hr>
            <p class="mb-0 small text-justify">
                <i class="fas fa-info-circle"></i>
                @Model.FundamentoLegal
            </p>
        </div>
    </div>
</div>
