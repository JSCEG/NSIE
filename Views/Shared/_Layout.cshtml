    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebarMobile = document.getElementById('sidebarMobile');

            // Crear instancia √∫nica del offcanvas
            let offcanvasInstance = new bootstrap.Offcanvas(sidebarMobile, {
                backdrop: true,
                keyboard: true
            });

            // Event listener √∫nico para el toggle
            sidebarToggle.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                  // Esta l√≠nea la a√±ades para la animaci√≥n del bot√≥n
                this.classList.toggle('is-active'); 
                
                if (window.innerWidth >= 992) {
                    // Desktop: toggle sidebar
                    document.body.classList.toggle('sidebar-collapsed');
                } else {
                    // Mobile: toggle offcanvas
                    offcanvasInstance.toggle();
                }
            });

            // Prevenir conflictos en collapse buttons
            document.querySelectorAll('[data-bs-toggle="collapse"]').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.stopPropagation();
                    // Bootstrap manejar√° el collapse autom√°ticamente
                });
            });

            // Cerrar offcanvas en resize
            window.addEventListener('resize', function () {
                if (window.innerWidth >= 992 && sidebarMobile.classList.contains('show')) {
                    offcanvasInstance.hide();
                }
            });
        });
    </script>
