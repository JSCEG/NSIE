@model dynamic
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Ahorros por Medidas";
    var httpContext = HttpContextAccessor.HttpContext;
    var perfilUsuarioJson = httpContext.Session.GetString("PerfilUsuario");
    var perfilUsuario = JsonConvert.DeserializeObject<PerfilUsuario>(perfilUsuarioJson);
}

<div class="text-center mb-4">
    <h3 class="cp-section cp-grouping-section">
        <img src="~/img/iconos/ahorros.png" alt="Icono Ahorros" class="iconomenu">
        Ahorros por Medidas de Reducción
        <button class="btn btn-link text-info" onclick="mostrarAyudaModulo()" data-bs-toggle="tooltip"
            title="¿Qué es este módulo?">
            <i class="fas fa-question-circle fa-lg"></i>
        </button>
    </h3>
    <div class="text-muted mt-2 text-justify px-5">
        <i class="fas fa-info-circle text-primary"></i>
        <em>Consulta los impactos estimados en ahorro energético logrados por distintas medidas implementadas en el
            país.</em>
    </div>
</div>

<div class="alert alert-light mb-4" role="alert">
    <nav aria-label="breadcrumb" style="padding-left:15px">
        <ol class="breadcrumb lp-5">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="container-fluid ps-5 pe-5 mb-3">
    <div class="alert alert-info">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <img src="~/img/iconos/medidas.png" alt="Icono Medidas" class="img-fluid">
            </div>
            <div class="col-md-10">
                <h5 class="alert-heading mb-2"><i class="fas fa-lightbulb"></i> Contexto de eficiencia</h5>
                <p class="mb-1 text-justify">
                    <span class="badge bg-primary">Informe Nacional de Eficiencia Energética</span>
                    <span class="badge bg-success ms-2">Ley de Transición Energética</span>
                </p>
                <hr>
                <p class="small text-justify">
                    Este módulo presenta las medidas de ahorro energético adoptadas a nivel nacional, con su estimación
                    anual de impacto en la reducción de la intensidad energética.</p>
            </div>
        </div>
    </div>
</div>

<!-- Tabla de medidas -->
<div class="container-fluid ps-5 pe-5">
    <div class="table-responsive">
        <table class="table table-bordered table-sm table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Medida</th>
                    <th>Ahorro Estimado (GWh)</th>
                    <th>Año</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Iluminación LED</td>
                    <td>120</td>
                    <td>2024</td>
                </tr>
                <tr>
                    <td>Norma NOM-ENER-2023</td>
                    <td>80</td>
                    <td>2024</td>
                </tr>
                <tr>
                    <td>Campaña Eficiencia</td>
                    <td>60</td>
                    <td>2023</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Gráfico de línea -->
<div class="container-fluid ps-5 pe-5 mt-4 mb-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title"><i class="fas fa-chart-line text-primary"></i> Evolución de Ahorros Energéticos</h5>
            <img src="https://quickchart.io/chart?c={type:'line',data:{labels:['2022','2023','2024'],datasets:[{label:'Ahorro (GWh)',data:[40,60,200]}]}}"
                alt="Gráfico Ahorro Energético" class="img-fluid">
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function mostrarAyudaModulo() {
            Swal.fire({
                title: 'Ahorros por Medidas',
                html: `<div class='text-start'>
                            <p>Consulta el impacto de medidas de eficiencia energética.</p>
                            <ul>
                                <li><i class='fas fa-lightbulb text-warning'></i> Medidas adoptadas por el gobierno y sector privado</li>
                                <li><i class='fas fa-bolt text-success'></i> Estimaciones de ahorro energético en GWh</li>
                                <li><i class='fas fa-chart-line'></i> Gráfico evolutivo del ahorro logrado</li>
                            </ul>
                        </div>`,
                confirmButtonText: 'Cerrar',
                width: 400
            });
        }
    </script>
}
