@model dynamic
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Catálogo de Equipos";
    var httpContext = HttpContextAccessor.HttpContext;
    var perfilUsuarioJson = httpContext.Session.GetString("PerfilUsuario");
    var perfilUsuario = JsonConvert.DeserializeObject<PerfilUsuario>(perfilUsuarioJson);
}

<div class="text-center mb-4">
    <h3 class="cp-section cp-grouping-section">
        <img src="~/img/iconos/equipos.png" alt="Icono Equipos" class="iconomenu">
        Catálogo de Equipos y Aparatos Relevantes
        <button class="btn btn-link text-info" onclick="mostrarAyudaModulo()" data-bs-toggle="tooltip"
            title="¿Qué es este módulo?">
            <i class="fas fa-question-circle fa-lg"></i>
        </button>
    </h3>
    <div class="text-muted mt-2 text-justify px-5">
        <i class="fas fa-info-circle text-primary"></i>
        <em>Consulta los principales equipos y aparatos relacionados con el consumo de energía en el mercado
            mexicano.</em>
    </div>
</div>

<div class="alert alert-light mb-4" role="alert">
    <nav aria-label="breadcrumb" style="padding-left:15px">
        <ol class="breadcrumb lp-5">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="container-fluid ps-5 pe-5 mb-3">
    <div class="alert alert-info">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <img src="~/img/iconos/consumo.png" alt="Icono Consumo" class="img-fluid">
            </div>
            <div class="col-md-10">
                <h5 class="alert-heading mb-2"><i class="fas fa-plug"></i> Contexto de consumo</h5>
                <p class="mb-1 text-justify">
                    <span class="badge bg-primary">Fuente: SENER / INEGI</span>
                    <span class="badge bg-success ms-2">Catálogo Eficiencia Energética</span>
                </p>
                <hr>
                <p class="small text-justify">
                    Este módulo proporciona información esencial para evaluar el consumo anual de energía por equipo, su
                    impacto en la demanda y su distribución comercial en el país.</p>
            </div>
        </div>
    </div>
</div>

<!-- Tabla de equipos -->
<div class="container-fluid ps-5 pe-5">
    <div class="table-responsive">
        <table class="table table-bordered table-sm table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Equipo</th>
                    <th>Consumo (kWh/año)</th>
                    <th>Unidades Comercializadas</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Refrigerador</td>
                    <td>350</td>
                    <td>1,200,000</td>
                </tr>
                <tr>
                    <td>Aire Acondicionado</td>
                    <td>800</td>
                    <td>950,000</td>
                </tr>
                <tr>
                    <td>Lámpara LED</td>
                    <td>40</td>
                    <td>5,000,000</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Gráfico de pastel -->
<div class="container-fluid ps-5 pe-5 mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title"><i class="fas fa-chart-pie text-primary"></i> Distribución de Unidades
                Comercializadas</h5>
            <img src="https://quickchart.io/chart?c={type:'pie',data:{labels:['Refrigerador','Aire Acondicionado','Lámpara LED'],datasets:[{data:[1200000,950000,5000000]}]}}"
                alt="Gráfico Unidades" class="img-fluid">
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function mostrarAyudaModulo() {
            Swal.fire({
                title: 'Catálogo de Equipos',
                html: `<div class='text-start'>
                            <p>Visualiza información clave sobre el consumo energético y la penetración de mercado de aparatos domésticos.</p>
                            <ul>
                                <li><i class='fas fa-bolt'></i> Datos de consumo anual en kWh</li>
                                <li><i class='fas fa-store'></i> Volumen de unidades vendidas</li>
                                <li><i class='fas fa-chart-pie'></i> Comparativo visual de mercado</li>
                            </ul>
                        </div>`,
                confirmButtonText: 'Cerrar',
                width: 400
            });
        }
    </script>
}
