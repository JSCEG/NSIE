@model dynamic
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Lista de Combustibles";
    var httpContext = HttpContextAccessor.HttpContext;
    var perfilUsuarioJson = httpContext.Session.GetString("PerfilUsuario");
    var perfilUsuario = JsonConvert.DeserializeObject<PerfilUsuario>(perfilUsuarioJson);
}

<div class="text-center mb-4">
    <h3 class="cp-section cp-grouping-section">
        <img src="~/img/iconos/combustible.png" alt="Icono Combustibles" class="iconomenu">
        Lista de Combustibles con sus Poderes Caloríficos
        <button class="btn btn-link text-info" onclick="mostrarAyudaModulo()" data-bs-toggle="tooltip"
            title="¿Qué es este módulo?">
            <i class="fas fa-question-circle fa-lg"></i>
        </button>
    </h3>
    <div class="text-muted mt-2 text-justify px-5">
        <i class="fas fa-info-circle text-primary"></i>
        <em>Consulta técnica de combustibles y su poder calorífico equivalente para evaluaciones energéticas.</em>
    </div>
</div>

<div class="alert alert-light mb-4" role="alert">
    <nav aria-label="breadcrumb" style="padding-left:15px">
        <ol class="breadcrumb lp-5">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="container-fluid ps-5 pe-5 mb-3">
    <div class="alert alert-info">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <img src="~/img/iconos/energia.png" alt="Icono Energía" class="img-fluid">
            </div>
            <div class="col-md-10">
                <h5 class="alert-heading mb-2"><i class="fas fa-burn"></i> Contexto técnico</h5>
                <p class="mb-1 text-justify">
                    <span class="badge bg-primary">Anexo Técnico BNE</span>
                    <span class="badge bg-success ms-2">Norma ISO 6976</span>
                </p>
                <hr>
                <p class="small text-justify">
                    El poder calorífico es una propiedad crítica para convertir combustibles en equivalentes
                    energéticos. Esta tabla facilita su referencia para transformaciones y comparativos de eficiencia.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Tabla de combustibles -->
<div class="container-fluid ps-5 pe-5">
    <div class="table-responsive">
        <table class="table table-bordered table-sm table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Combustible</th>
                    <th>Poder Calorífico (MJ/kg)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Gasolina</td>
                    <td>44.0</td>
                </tr>
                <tr>
                    <td>Diésel</td>
                    <td>45.5</td>
                </tr>
                <tr>
                    <td>Gas Natural</td>
                    <td>38.0</td>
                </tr>
                <tr>
                    <td>Carbón</td>
                    <td>24.0</td>
                </tr>
                <tr>
                    <td>Biomasa</td>
                    <td>15.0</td>
                </tr>
                <tr>
                    <td>Hidrogeno</td>
                    <td>120.0</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Gráfico visual -->
<div class="container-fluid ps-5 pe-5 mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title"><i class="fas fa-chart-bar text-primary"></i> Comparativo de Poder Calorífico</h5>
            <img src="https://quickchart.io/chart?c={type:'bar',data:{labels:['Gasolina','Diésel','Gas Natural','Carbón','Biomasa','Hidrogeno'],datasets:[{label:'Poder Calorífico (MJ/kg)',data:[44,45.5,38,24,15,120]}]}}"
                alt="Gráfico Poder Calorífico" class="img-fluid">
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function mostrarAyudaModulo() {
            Swal.fire({
                title: 'Lista de Combustibles',
                html: `<div class='text-start'>
                            <p>Consulta valores energéticos clave de referencia.</p>
                            <ul>
                                <li><i class='fas fa-fire'></i> Poder calorífico expresado en MJ/kg</li>
                                <li><i class='fas fa-table'></i> Datos técnicos listados por combustible</li>
                                <li><i class='fas fa-chart-bar'></i> Comparativo visual para análisis rápido</li>
                            </ul>
                        </div>`,
                confirmButtonText: 'Cerrar',
                width: 400
            });
        }
    </script>
}
