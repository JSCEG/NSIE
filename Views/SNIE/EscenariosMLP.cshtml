@model dynamic
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Línea Base y Escenarios del Sector Energético";
    var httpContext = HttpContextAccessor.HttpContext;
    var perfilUsuarioJson = httpContext.Session.GetString("PerfilUsuario");
    var perfilUsuario = JsonConvert.DeserializeObject<PerfilUsuario>(perfilUsuarioJson);
}

<div class="text-center mb-4">
    <h3 class="cp-section cp-grouping-section">
        <img src="~/img/iconos/escenarios.png" alt="Icono Escenarios" class="iconomenu">
        Línea Base y Escenarios del Sector Energético a Mediano y Largo Plazo
        <button class="btn btn-link text-info" onclick="mostrarAyudaModulo()" data-bs-toggle="tooltip"
            title="¿Qué es este módulo?">
            <i class="fas fa-question-circle fa-lg"></i>
        </button>
    </h3>
    <div class="text-muted mt-2 text-justify px-5">
        <i class="fas fa-info-circle text-primary"></i>
        <em>Consulta los escenarios energéticos proyectados con base en la línea base actual y sus variables
            asociadas.</em>
    </div>
</div>

<div class="alert alert-light mb-4" role="alert">
    <nav aria-label="breadcrumb" style="padding-left:15px">
        <ol class="breadcrumb lp-5">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="container-fluid ps-5 pe-5 mb-3">
    <div class="alert alert-info">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <img src="~/img/iconos/proyecciones.png" alt="Icono Proyecciones" class="img-fluid">
            </div>
            <div class="col-md-10">
                <h5 class="alert-heading mb-2"><i class="fas fa-chart-line"></i> Marco prospectivo</h5>
                <p class="mb-1 text-justify">
                    <span class="badge bg-primary">Prospectiva Energética 2024-2035</span>
                    <span class="badge bg-success ms-2">Escenarios BASE, AMBICIOSO y TRANSICIONAL</span>
                </p>
                <hr>
                <p class="small text-justify">
                    El análisis de escenarios permite evaluar distintas trayectorias de desarrollo del sector
                    energético, considerando variables como demanda, generación, emisiones y capacidad instalada.</p>
            </div>
        </div>
    </div>
</div>

<!-- Tabla de proyecciones -->
<div class="container-fluid ps-5 pe-5">
    <div class="table-responsive">
        <table class="table table-bordered table-sm table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Año</th>
                    <th>Demanda Total (TWh)</th>
                    <th>Capacidad Instalada (GW)</th>
                    <th>Emisiones (MtCO2e)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>2024</td>
                    <td>355</td>
                    <td>82</td>
                    <td>160</td>
                </tr>
                <tr>
                    <td>2030</td>
                    <td>410</td>
                    <td>105</td>
                    <td>140</td>
                </tr>
                <tr>
                    <td>2035</td>
                    <td>465</td>
                    <td>125</td>
                    <td>120</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Gráfico de escenarios -->
<div class="container-fluid ps-5 pe-5 mt-4 mb-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title"><i class="fas fa-chart-area text-primary"></i> Escenarios Energéticos</h5>
            <img src="https://quickchart.io/chart?c={type:'line',data:{labels:['2024','2030','2035'],datasets:[{label:'Demanda (TWh)',data:[355,410,465],borderColor:'blue'},{label:'Capacidad (GW)',data:[82,105,125],borderColor:'green'},{label:'Emisiones (MtCO2e)',data:[160,140,120],borderColor:'red'}]}}"
                alt="Gráfico Escenarios" class="img-fluid">
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function mostrarAyudaModulo() {
            Swal.fire({
                title: 'Escenarios del Sector Energético',
                html: `<div class='text-start'>
                        <p>Explora la proyección de variables clave del sector energético con base en la línea base y escenarios prospectivos.</p>
                        <ul>
                            <li><i class='fas fa-signal'></i> Demanda energética proyectada</li>
                            <li><i class='fas fa-battery-three-quarters'></i> Capacidad instalada estimada</li>
                            <li><i class='fas fa-cloud'></i> Reducción progresiva de emisiones</li>
                        </ul>
                    </div>`,
                confirmButtonText: 'Cerrar',
                width: 400
            });
        }
    </script>
}