@model dynamic
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Registro de Instalaciones";
    var httpContext = HttpContextAccessor.HttpContext;
    var perfilUsuarioJson = httpContext.Session.GetString("PerfilUsuario");
    var perfilUsuario = JsonConvert.DeserializeObject<PerfilUsuario>(perfilUsuarioJson);
}

<div class="text-center mb-4">
    <h3 class="cp-section cp-grouping-section">
        <img src="~/img/iconos/instalaciones.png" alt="Icono Instalaciones" class="iconomenu">
        Registro de Instalaciones, Empresas o Productos
        <button class="btn btn-link text-info" onclick="mostrarAyudaModulo()" data-bs-toggle="tooltip"
            title="¿Qué es este módulo?">
            <i class="fas fa-question-circle fa-lg"></i>
        </button>
    </h3>
    <div class="text-muted mt-2 text-justify px-5">
        <i class="fas fa-info-circle text-primary"></i>
        <em>Visualiza el listado de instalaciones relacionadas con actividades energéticas en el país.</em>
    </div>
</div>

<div class="alert alert-light mb-4" role="alert">
    <nav aria-label="breadcrumb" style="padding-left:15px">
        <ol class="breadcrumb lp-5">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="container-fluid ps-5 pe-5 mb-3">
    <div class="alert alert-info">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <img src="~/img/iconos/registro.png" alt="Icono Registro" class="img-fluid">
            </div>
            <div class="col-md-10">
                <h5 class="alert-heading mb-2"><i class="fas fa-warehouse"></i> Contexto regulatorio</h5>
                <p class="mb-1 text-justify">
                    <span class="badge bg-primary">Normativa CRE / CENACE</span>
                    <span class="badge bg-success ms-2">Art. 12 Ley de Transición Energética</span>
                </p>
                <hr>
                <p class="small text-justify">
                    Este módulo permite consultar instalaciones, edificaciones, empresas o productos energéticos que
                    forman parte del registro nacional, incluyendo su tipo de actividad y ubicación.</p>
            </div>
        </div>
    </div>
</div>

<!-- Tabla de instalaciones -->
<div class="container-fluid ps-5 pe-5">
    <div class="table-responsive">
        <table class="table table-bordered table-sm table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Ubicación</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Planta Solar X</td>
                    <td>Generación</td>
                    <td>Sonora</td>
                </tr>
                <tr>
                    <td>Empresa Y</td>
                    <td>Consumo</td>
                    <td>CDMX</td>
                </tr>
                <tr>
                    <td>Edificio Z</td>
                    <td>Eficiencia</td>
                    <td>Jalisco</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Imagen de referencia -->
<div class="container-fluid ps-5 pe-5 mt-4 mb-5">
    <div class="card shadow-sm">
        <div class="card-body text-center">
            <h5 class="card-title"><i class="fas fa-map-marked-alt text-primary"></i> Mapa de Referencia Nacional</h5>
            <img src="https://upload.wikimedia.org/wikipedia/commons/6/6e/Mapa_Mexico.png" alt="Mapa de México"
                class="img-fluid" style="max-width: 400px;">
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function mostrarAyudaModulo() {
            Swal.fire({
                title: 'Registro de Instalaciones',
                html: `<div class='text-start'>
                            <p>Consulta el listado de instalaciones registradas que participan en el ecosistema energético nacional.</p>
                            <ul>
                                <li><i class='fas fa-industry'></i> Plantas generadoras y edificaciones eficientes</li>
                                <li><i class='fas fa-building'></i> Empresas usuarias de energía</li>
                                <li><i class='fas fa-map-marked'></i> Ubicaciones geográficas relevantes</li>
                            </ul>
                        </div>`,
                confirmButtonText: 'Cerrar',
                width: 400
            });
        }
    </script>
}