@{
    Layout = null;
    var cdn = "https://cdn.sassoapps.com";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restablecer Contraseña | SNIER</title>
    <meta name="description" content="Sistema Nacional de Información Energética - Restablecimiento de contraseña">

    <!-- Bootstrap 5.3 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Poppins:wght@600;700&display=swap"
        rel="stylesheet">

    <style>
        :root {
            --primary-color: #216d92;
            --primary-light: #81c3c9;
            --primary-dark: #0d4b6e;
            --secondary-color: #FF9800;
            --dark-color: #1A3E4C;
            --light-color: #F8F9FA;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            overflow: hidden;
            min-height: 100vh;
        }

        #video-bg {
            position: fixed;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            transform: translate(-50%, -50%);
            object-fit: cover;
            z-index: -1;
        }

        .password-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 450px;
            padding: 2.5rem;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            font-weight: 600;
            padding: 0.75rem;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(33, 109, 146, 0.3);
        }

        .input-group-text {
            background-color: var(--primary-color);
            color: white;
            border: none;
        }

        .form-control {
            border-left: none;
            padding-left: 0;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #ced4da;
        }

        .brand-logo {
            max-width: 120px;
            margin-bottom: 1.5rem;
        }

        .alert-success {
            background-color: #e8f5e9;
            color: #2e7d32;
            border: none;
        }

        .alert-danger {
            background-color: #ffebee;
            color: #c62828;
            border: none;
        }

        /* Responsive adjustments */
        @@media (max-width: 576px) {
            .password-card {
                padding: 1.5rem;
                margin: 0 1rem;
            }
        }
    </style>
</head>

<body>
    <video autoplay muted loop id="video-bg">
        <source src="@cdn/video/Login_snier.mp4" type="video/mp4">
    </video>

    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="password-card" data-aos="zoom-in">
            <div class="text-center mb-4">
                <img src="@cdn/img_snier/login/logo_snier.png" alt="SNIER" class="brand-logo">
                <h4 class="fw-bold" style="color: var(--primary-color);">Restablecer Contraseña</h4>
                <p class="text-muted">Ingresa tu correo electrónico para recibir instrucciones</p>
            </div>

            @if (ViewData["EsExitoso"] == null || !(bool)ViewData["EsExitoso"])
            {
                <form method="post" action="@Url.Action("ForgotPassword", "Acceso")">
                    <div class="mb-4">
                        <label for="Correo" class="form-label">Correo electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input id="Correo" type="email" name="Correo" class="form-control"
                                placeholder="ejemplo@correo.com" required>
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">Enviar Instrucciones</button>
                    </div>

                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            <i class="bi bi-exclamation-circle me-2"></i>@ViewData["Mensaje"]
                        </div>
                    }

                    <div class="text-center mt-3">
                        <a href="@Url.Action("Login", "Acceso")" class="text-decoration-none">
                            <i class="bi bi-arrow-left me-2"></i>Volver al inicio de sesión
                        </a>
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-success text-center">
                    <i class="bi bi-check-circle-fill me-2"></i>@ViewData["Mensaje"]
                </div>
                <div class="d-grid mt-4">
                    <a href="@Url.Action("Login", "Acceso")" class="btn btn-primary">
                        Volver al inicio de sesión
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>