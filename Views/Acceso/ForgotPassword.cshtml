@{
    Layout = null;
    var cdn = "https://cdn.sassoapps.com";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restablecer Contraseña</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            background: #000;
            font-family: 'Montserrat', sans-serif;
            overflow: hidden;
        }

         #video-bg {
            position: fixed;
            @* top: 0;
            left: 0; *@
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            z-index: -1;
            width: auto;
            height: auto;
            transform: translate(-50%, -50%);
            object-fit: cover;
        }


        .user_card {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(16px);
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
            padding: 2rem;
            width: 100%;
            max-width: 400px;
        }

        .btn-snie-verde {
            background-color: #81c3c9 !important;
            color: white !important;
            border: none;
        }

        .btn-snie-verde:hover {
            background-color: #5ba5aa !important;
        }

        .input-group-text {
            background-color: #81c3c9;
            color: white;
            border: none;
        }

        .form-control {
            border: none;
            border-radius: 0 8px 8px 0;
        }

        .brand_logo {
            max-width: 100px;
        }
    </style>
</head>

<body>
    <video autoplay muted loop id="video-bg">
        <source src="@cdn/video/Login_snier.mp4" type="video/mp4">
    </video>

    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="user_card">
            <div class="text-center mb-4">
                <img src="@cdn/img_snier/login/logo_snier.png" class="img-fluid mb-2" style="max-width: 100px;">
            </div>

            @if (ViewData["EsExitoso"] == null || !(bool)ViewData["EsExitoso"])
            {
                <form method="post" action="@Url.Action("ForgotPassword", "Acceso")">
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input id="Correo" type="text" name="Correo" class="form-control" placeholder="Correo electrónico"
                            required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" onclick="validar()" class="btn btn-snie-verde">Restablecer Contraseña</button>
                    </div>

                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger text-center mt-3">
                            @ViewData["Mensaje"]
                        </div>
                    }
                </form>
            }
            else
            {
                <div class="alert alert-success text-center">
                    @ViewData["Mensaje"]
                </div>
                <div class="text-center mt-3">
                    <a href="@Url.Action("Login", "Acceso")" class="btn btn-snie-verde">Volver al inicio de sesión</a>
                </div>
            }
        </div>
    </div>

    <script>
        function validar() {
            const campo = document.getElementById("Correo").value.trim();
            if (campo === "") {
                alert("Por favor, ingresa tu correo electrónico.");
                event.preventDefault();
            }
        }
    </script>
</body>

</html>
