        if (typeof particlesJS !== 'undefined') {
            particlesJS('particles-js', {
                particles: {
                    number: {
                        value: 100, // Adjusted for performance with line linking
                        density: { enable: true, value_area: 800 }
                    },
                    color: { value: '#ffffff' },
                    shape: {
                        type: 'circle'
                    },
                    opacity: {
                        value: 0.5, // Increased for better visibility
                        random: false,
                        anim: { enable: false }
                    },
                    size: {
                        value: 3, // Slightly larger particles
                        random: true,
                        anim: { enable: false }
                    },
                    line_linked: {
                        enable: true,
                        distance: 150,
