@{
    ViewData["Title"] = "Acceso al Sistema Nacional de Informaci√≥n Energ√©tica";
    Layout = null;
    var cdn = "https://cdn.sassoapps.com";
}


<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="description"
        content="Plataforma oficial para integrar, analizar y transparentar toda la informaci√≥n energ√©tica de M√©xico">

    <!-- Bootstrap 5.3 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- AOS Animation -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <!-- Particles.js for modern background effects -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Poppins:wght@600;700&display=swap"
        rel="stylesheet">

    <style>
        :root {
            --primary-color: #216d92;
            --primary-light: #81c3c9;
            --primary-dark: #0d4b6e;
            --secondary-color: #FF9800;
            --dark-color: #1A3E4C;
            --light-color: #F8F9FA;
            --gradient-primary: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
        }

        .bpComposerFooter {
            display: none !important;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: #333;
            overflow-x: hidden;
            line-height: 1.6;
        }

        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
        }

        .hero-section {
            background: var(--gradient-primary);
            color: white;
            padding: 8rem 0 6rem;
            position: relative;
            overflow: hidden;
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background:
                radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 119, 48, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(33, 109, 146, 0.2) 0%, transparent 50%);
            z-index: 0;
            animation: gradientFlow 15s ease-in-out infinite;
        }

        @@keyframes gradientFlow {

            0%,
            100% {
                background:
                    radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
                    radial-gradient(circle at 80% 20%, rgba(255, 119, 48, 0.15) 0%, transparent 50%),
                    radial-gradient(circle at 40% 40%, rgba(33, 109, 146, 0.2) 0%, transparent 50%);
            }

            50% {
                background:
                    radial-gradient(circle at 80% 20%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
                    radial-gradient(circle at 20% 80%, rgba(255, 119, 48, 0.15) 0%, transparent 50%),
                    radial-gradient(circle at 60% 60%, rgba(33, 109, 146, 0.2) 0%, transparent 50%);
            }
        }

        /* Particles container */
        #particles-js {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
            pointer-events: none;
            /* Permite que los eventos de mouse pasen a trav√©s */
        }

        /* Texto destacado debajo del video */
        .video-description {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            padding: 0.75rem 1rem;
            margin-top: 1rem;
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .video-description:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .video-description small {
            color: rgba(255, 255, 255, 0.9);
            font-weight: 500;
            text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
        }

        .hero-content {
            position: relative;
            z-index: 2;
            pointer-events: auto;
            /* Asegura que el contenido sea interactivo */
        }

        /* Asegurar que el video sea clickeable */
        .hero-video-container {
            position: relative;
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            z-index: 3;
            /* Z-index m√°s alto que las part√≠culas */
            pointer-events: auto;
            /* Asegura interactividad completa */
        }

        /* Modern text highlight */
        .text-gradient {
            color: #ffffff;
            /* Removimos el text-shadow y la animaci√≥n glow */
        }

        /* Modern buttons */
        .modern-btn {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
            border: none;
            border-radius: 50px;
            padding: 1rem 2rem;
            font-weight: 600;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 0 8px 25px rgba(33, 109, 146, 0.3);
            position: relative;
            overflow: hidden;
        }

        .modern-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.6s;
        }

        .modern-btn:hover::before {
            left: 100%;
        }

        .modern-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(33, 109, 146, 0.4);
        }

        .modern-btn-outline {
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50px;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .modern-btn-outline:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.5);
            transform: translateY(-3px);
        }

        /* Modern badge */
        .bg-primary-soft {
            background: rgba(33, 109, 146, 0.15) !important;
            border: 1px solid rgba(33, 109, 146, 0.3);
            backdrop-filter: blur(10px);
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            padding: 0.75rem 2rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(33, 109, 146, 0.3);
        }

        .btn-secondary {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
            color: white;
        }

        .feature-card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
            height: 100%;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            border-left: 4px solid var(--primary-light);
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--primary-color);
        }

        .section-title {
            position: relative;
            display: inline-block;
            margin-bottom: 2rem;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 50px;
            height: 3px;
            background: var(--primary-color);
        }

        .testimonial-card {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            height: 100%;
        }

        .testimonial-img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid var(--primary-light);
        }

        .form-section {
            background: url('https://cdn.sassoapps.com/img_sankey/energy-bg.jpg') center/cover;
            position: relative;
            padding: 6rem 0;
        }

        .form-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(13, 75, 110, 0.9);
            z-index: 0;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            box-shadow:
                0 25px 50px rgba(0, 0, 0, 0.15),
                0 0 0 1px rgba(255, 255, 255, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.3);
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            z-index: 2;
            position: relative;
        }

        .login-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg,
                    var(--primary-color),
                    var(--primary-light),
                    var(--primary-color));
            z-index: 1;
        }

        .login-card:hover {
            transform: translateY(-5px);
            box-shadow:
                0 35px 70px rgba(0, 0, 0, 0.2),
                0 0 0 1px rgba(255, 255, 255, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.4);
        }

        .input-group-text {
            background-color: var(--primary-color);
            color: white;
            border: none;
        }

        .form-control {
            border-left: none;
            padding-left: 0;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #ced4da;
        }

        .stats-item {
            text-align: center;
            padding: 2rem 1rem;
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(5px);
            transition: all 0.3s ease;
        }

        .stats-item:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.2);
        }

        .stats-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: white;
            margin-bottom: 0.5rem;
        }

        .stats-label {
            font-size: 1rem;
            opacity: 0.9;
        }

        .nav-pills .nav-link.active {
            background-color: var(--primary-color);
        }

        .nav-pills .nav-link {
            color: var(--dark-color);
        }

        footer {
            background-color: var(--dark-color);
            color: white;
            padding: 4rem 0 2rem;
        }

        .footer-links a {
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .footer-links a:hover {
            color: white;
            padding-left: 5px;
        }

        .social-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            color: white;
            margin-right: 10px;
            transition: all 0.3s ease;
        }

        .social-icon:hover {
            background: var(--primary-light);
            transform: translateY(-3px);
        }

        /* Video background for login */
        #video-bg {
            position: fixed;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            transform: translate(-50%, -50%);
            object-fit: cover;
            z-index: -1;
        }

        /* Hero video container */
        .hero-video-container {
            position: relative;
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            border-radius: 20px;
            overflow: hidden;
            box-shadow:
                0 25px 50px rgba(0, 0, 0, 0.4),
                0 0 0 1px rgba(255, 255, 255, 0.1),
                inset 0 1px 0 rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.05);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            z-index: 10;
        }

        .hero-video-container:hover {
            transform: translateY(-5px);
            box-shadow:
                0 35px 70px rgba(0, 0, 0, 0.5),
                0 0 0 1px rgba(255, 255, 255, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.3);
        }

        .hero-video-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg,
                    rgba(33, 109, 146, 0.05),
                    rgba(129, 195, 201, 0.05),
                    transparent,
                    rgba(33, 109, 146, 0.05));
            z-index: 1;
            pointer-events: none;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .hero-video-container:hover::before {
            opacity: 1;
        }

        .hero-video {
            width: 100%;
            height: auto;
            display: block;
            position: relative;
            z-index: 4;
            /* Mayor que el contenedor */
        }

        /* Asegurar que todos los controles del video funcionen */
        .hero-video::-webkit-media-controls,
        .hero-video::-webkit-media-controls-panel,
        .hero-video::-webkit-media-controls-play-button,
        .hero-video::-webkit-media-controls-volume-slider,
        .hero-video::-webkit-media-controls-timeline {
            z-index: 5 !important;
            pointer-events: auto !important;
        }

        /* Estilos para los controles del video */
        .hero-video::-webkit-media-controls-panel {
            background-color: rgba(0, 0, 0, 0.8);
        }

        .hero-video::-webkit-media-controls-play-button,
        .hero-video::-webkit-media-controls-volume-slider,
        .hero-video::-webkit-media-controls-timeline {
            filter: invert(1);
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .hero-section {
                padding: 6rem 0 4rem;
            }

            .hero-section h1 {
                font-size: 2.2rem;
            }

            .stats-item {
                margin-bottom: 1rem;
            }

            .hero-video-container {
                max-width: 100%;
                margin-top: 2rem;
            }
        }

        /* Estilos mejorados para los m√≥dulos */
        .section-title::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--primary-light), transparent);
            z-index: -1;
        }

        .module-card {
            background: white;
            border-radius: 16px;
            padding: 2rem;
            height: 100%;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
            border: 1px solid rgba(0, 0, 0, 0.05);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            position: relative;
            overflow: hidden;
        }

        .module-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .module-card:hover::before {
            transform: scaleX(1);
        }

        .module-card:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: 0 20px 40px rgba(33, 109, 146, 0.15);
        }

        .module-icon-wrapper {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
            transition: transform 0.3s ease;
        }

        .module-card:hover .module-icon-wrapper {
            transform: scale(1.1) rotate(5deg);
        }

        .module-icon {
            font-size: 2rem;
            color: white;
        }

        .module-card h4 {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: var(--dark-color);
            line-height: 1.3;
        }

        .module-card p {
            color: #666;
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .module-footer {
            margin-top: auto;
            padding-top: 1rem;
        }

        .governance-section {
            background: linear-gradient(135deg, rgba(33, 109, 146, 0.05), rgba(129, 195, 201, 0.05));
            border-radius: 20px;
            padding: 3rem 2rem;
            margin-top: 3rem;
        }

        .governance-card {
            background: white;
            border-radius: 12px;
            padding: 2rem 1.5rem;
            text-align: center;
            height: 100%;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .governance-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(33, 109, 146, 0.15);
            border-color: var(--primary-light);
        }

        .governance-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            transition: transform 0.3s ease;
        }

        .governance-card:hover .governance-icon {
            transform: scale(1.1);
        }

        .governance-icon i {
            font-size: 1.5rem;
            color: white;
        }

        .governance-card h5 {
            font-weight: 600;
            margin-bottom: 1rem;
            color: var(--dark-color);
        }

        .governance-card p {
            color: #666;
            font-size: 0.9rem;
            line-height: 1.5;
        }

        /* Mejoras para las tarjetas de flujo principal */
        .governance-card.bg-success,
        .governance-card.bg-primary,
        .governance-card.bg-warning,
        .governance-card.bg-info,
        .governance-card.bg-secondary,
        .governance-card.bg-dark {
            border: none;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .governance-card.bg-success:hover,
        .governance-card.bg-primary:hover,
        .governance-card.bg-warning:hover,
        .governance-card.bg-info:hover,
        .governance-card.bg-secondary:hover,
        .governance-card.bg-dark:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
        }

        .governance-card h6 {
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
            line-height: 1.3;
        }

        .governance-card p.small {
            font-size: 0.8rem;
            opacity: 0.9;
            margin-bottom: 0;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .governance-card h6 {
                font-size: 0.85rem;
            }

            .governance-card p.small {
                font-size: 0.75rem;
            }
        }

        /* Opci√≥n 1: Timeline */
        .functions-timeline {
            position: relative;
        }

        .function-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 12px;
            border-left: 4px solid var(--primary-color);
            transition: all 0.3s ease;
        }

        .function-item:hover {
            transform: translateX(10px);
            box-shadow: 0 8px 25px rgba(33, 109, 146, 0.15);
        }

        .function-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            flex-shrink: 0;
        }

        .function-icon i {
            font-size: 1.5rem;
            color: white;
        }

        .function-content h6 {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--dark-color);
        }

        .function-content p {
            color: #666;
            margin-bottom: 0;
            font-size: 0.9rem;
        }

        .function-highlight {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
            border-radius: 16px;
            color: white;
            text-align: center;
        }

        .function-icon-large {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 2rem;
        }

        .function-icon-large i {
            font-size: 2rem;
            color: white;
        }

        /* Opci√≥n 2: Grid */
        .functions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .function-tile {
            background: white;
            padding: 2rem 1.5rem;
            border-radius: 12px;
            text-align: center;
            border: 2px solid transparent;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

        .function-tile:hover {
            transform: translateY(-8px);
            border-color: var(--primary-light);
            box-shadow: 0 15px 30px rgba(33, 109, 146, 0.15);
        }

        .function-tile i {
            font-size: 2.5rem;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .function-tile h6 {
            font-weight: 600;
            margin-bottom: 0.75rem;
            color: var(--dark-color);
        }

        .function-tile p {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 0;
        }

        .function-tile-wide {
            grid-column: span 2;
        }

        /* Opci√≥n 3: Lista compacta (RECOMENDADA) */
        .functions-list {
            background: rgba(255, 255, 255, 0.5);
            border-radius: 16px;
            padding: 2rem;
        }

        .function-row {
            display: flex;
            align-items: center;
            padding: 1.5rem;
            background: white;
            border-radius: 12px;
            margin-bottom: 1rem;
            border: 1px solid rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }

        .function-row:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(33, 109, 146, 0.1);
            border-color: var(--primary-light);
        }

