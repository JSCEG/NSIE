@{
    ViewData["Title"] = "Acceso al Sistema Nacional de Información Energética";
    Layout = null;
    var cdn = "https://cdn.sassoapps.com";
}


<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="description"
        content="Plataforma oficial para integrar, analizar y transparentar toda la información energética de México">

    <!-- Bootstrap 5.3 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- AOS Animation -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Poppins:wght@600;700&display=swap"
        rel="stylesheet">

    <style>
        :root {
            --primary-color: #216d92;
            --primary-light: #81c3c9;
            --primary-dark: #0d4b6e;
            --secondary-color: #FF9800;
            --dark-color: #1A3E4C;
            --light-color: #F8F9FA;
            --gradient-primary: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: #333;
            overflow-x: hidden;
            line-height: 1.6;
        }

        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
        }

        .hero-section {
            background: var(--gradient-primary);
            color: white;
            padding: 8rem 0 6rem;
            position: relative;
            overflow: hidden;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('https://cdn.sassoapps.com/img_sankey/energy-pattern.png') center/cover;
            opacity: 0.1;
            z-index: 0;
        }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            padding: 0.75rem 2rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(33, 109, 146, 0.3);
        }

        .btn-secondary {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
            color: white;
        }

        .feature-card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
            height: 100%;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            border-left: 4px solid var(--primary-light);
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--primary-color);
        }

        .section-title {
            position: relative;
            display: inline-block;
            margin-bottom: 2rem;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 50px;
            height: 3px;
            background: var(--primary-color);
        }

        .testimonial-card {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            height: 100%;
        }

        .testimonial-img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid var(--primary-light);
        }

        .form-section {
            background: url('https://cdn.sassoapps.com/img_sankey/energy-bg.jpg') center/cover;
            position: relative;
            padding: 6rem 0;
        }

        .form-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(13, 75, 110, 0.9);
            z-index: 0;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            transition: all 0.3s ease;
            z-index: 1;
        }

        .login-card:hover {
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
        }

        .input-group-text {
            background-color: var(--primary-color);
            color: white;
            border: none;
        }

        .form-control {
            border-left: none;
            padding-left: 0;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #ced4da;
        }

        .stats-item {
            text-align: center;
            padding: 2rem 1rem;
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(5px);
            transition: all 0.3s ease;
        }

        .stats-item:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.2);
        }

        .stats-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: white;
            margin-bottom: 0.5rem;
        }

        .stats-label {
            font-size: 1rem;
            opacity: 0.9;
        }

        .nav-pills .nav-link.active {
            background-color: var(--primary-color);
        }

        .nav-pills .nav-link {
            color: var(--dark-color);
        }

        footer {
            background-color: var(--dark-color);
            color: white;
            padding: 4rem 0 2rem;
        }

        .footer-links a {
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .footer-links a:hover {
            color: white;
            padding-left: 5px;
        }

        .social-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            color: white;
            margin-right: 10px;
            transition: all 0.3s ease;
        }

        .social-icon:hover {
            background: var(--primary-light);
            transform: translateY(-3px);
        }

        /* Video background for login */
        #video-bg {
            position: fixed;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            transform: translate(-50%, -50%);
            object-fit: cover;
            z-index: -1;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .hero-section {
                padding: 6rem 0 4rem;
            }

            .hero-section h1 {
                font-size: 2.2rem;
            }

            .stats-item {
                margin-bottom: 1rem;
            }
        }
    </style>
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top"
        style="background-color: rgba(13, 75, 110, 0.9); backdrop-filter: blur(10px);">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="@cdn/img_snier/login/logo_snier.png" alt="SNIER" height="40" style="height:64px">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#inicio">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#modulos">Módulos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#beneficios">Beneficios</a>
                    </li>
                    @* <li class="nav-item">
                        <a class="nav-link" href="#testimonios">Testimonios</a>
                    </li> *@
                    <li class="nav-item">
                        <a class="nav-link" href="#acceso">Acceso</a>
                    </li>
                </ul>
                <a href="#acceso" class="btn btn-primary ms-lg-3">Iniciar sesión</a>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section" id="inicio">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 hero-content" data-aos="fade-right">
                    <h1 class="display-4 fw-bold mb-4">Sistema Nacional de Información Energética</h1>
                    <p class="lead mb-4">Plataforma oficial para integrar, analizar y transparentar toda la información
                        energética de México</p>
                    <div class="d-flex flex-wrap gap-3">
                        <a href="#acceso" class="btn btn-primary btn-lg">Acceder al sistema</a>
                        <a href="#modulos" class="btn btn-outline-light btn-lg">Ver módulos</a>
                    </div>
                </div>
                <div class="col-lg-6" data-aos="fade-left">
                    <img src="@cdn/img_snier/login/logo_snier.png" alt="SNIER Dashboard" class="img-fluid">
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="py-5" style="background-color: var(--light-color);">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-3" data-aos="fade-up">
                    <div class="stats-item">
                        <div class="stats-number text-primary">15+</div>
                        <div class="stats-label">Módulos especializados</div>
                    </div>
                </div>
                <div class="col-md-3" data-aos="fade-up" data-aos-delay="100">
                    <div class="stats-item">
                        <div class="stats-number text-primary">500K+</div>
                        <div class="stats-label">Registros energéticos</div>
                    </div>
                </div>
                <div class="col-md-3" data-aos="fade-up" data-aos-delay="200">
                    <div class="stats-item">
                        <div class="stats-number text-primary">32</div>
                        <div class="stats-label">Entidades federativas</div>
                    </div>
                </div>
                <div class="col-md-3" data-aos="fade-up" data-aos-delay="300">
                    <div class="stats-item">
                        <div class="stats-number text-primary">24/7</div>
                        <div class="stats-label">Datos actualizados</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Modules Section -->
    <section class="py-5" id="modulos" style="background:#ffff">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title">Módulos principales</h2>
                <p class="lead text-muted">Explora las herramientas especializadas del SNIER</p>
            </div>

            <div class="row g-4">
                <div class="col-md-4" data-aos="fade-up">
                    <div class="feature-card p-4">
                        <i class="bi bi-lightning-charge feature-icon"></i>
                        <h4>Balance Nacional de Energía</h4>
                        <p>Visualiza los flujos de energía desde su generación hasta su consumo final por sector y
                            fuente energética.</p>
                    </div>
                </div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="feature-card p-4">
                        <i class="bi bi-tree feature-icon"></i>
                        <h4>Certificados de Energías Limpias</h4>
                        <p>Consulta certificados emitidos, participantes obligados y cumplimiento de metas anuales.</p>
                    </div>
                </div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                    <div class="feature-card p-4">
                        <i class="bi bi-currency-dollar feature-icon"></i>
                        <h4>Precios y Tarifas</h4>
                        <p>Acceso a tarifas eléctricas vigentes, precios de hidrocarburos y comparativos históricos.</p>
                    </div>
                </div>
                <div class="col-md-4" data-aos="fade-up">
                    <div class="feature-card p-4">
                        <i class="bi bi-file-earmark-check feature-icon"></i>
                        <h4>Permisos y Regulaciones</h4>
                        <p>Visualiza permisos autorizados por CRE, CNH, SENER con su vigencia y documentación asociada.
                        </p>
                    </div>
                </div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="feature-card p-4">
                        <i class="bi bi-map feature-icon"></i>
                        <h4>Georreferenciación</h4>
                        <p>Mapas interactivos con infraestructura energética, proyectos renovables y condiciones
                            climáticas.</p>
                    </div>
                </div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                    <div class="feature-card p-4">
                        <i class="bi bi-bar-chart-line feature-icon"></i>
                        <h4>Estadísticas e Indicadores</h4>
                        <p>Paneles con gráficos dinámicos de producción, consumo, demanda y eficiencia energética.</p>
                    </div>
                </div>
                <div class="col-md-4" data-aos="fade-up">
                    <div class="feature-card p-4">
                        <i class="bi bi-graph-up-arrow feature-icon"></i>
                        <h4>Pronósticos Energéticos</h4>
                        <p>Modelos predictivos de consumo y generación con escenarios futuros para toma de decisiones.
                        </p>
                    </div>
                </div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="feature-card p-4">
                        <i class="bi bi-cloud-arrow-up feature-icon"></i>
                        <h4>Carga de Datos</h4>
                        <p>Módulo seguro para instituciones que alimentan el sistema con archivos validados.</p>
                    </div>
                </div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                    <div class="feature-card p-4">
                        <i class="bi bi-bell feature-icon"></i>
                        <h4>Notificaciones y Alertas</h4>
                        <p>Alertas regulatorias, vencimientos de permisos y reportes por mercado energético.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Benefits Section -->
    <section class="py-5 bg-light" id="beneficios">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title">¿Para quién es útil el SNIER?</h2>
                <p class="lead text-muted">Beneficios para cada tipo de usuario</p>
            </div>

            <div class="row g-4">
                <div class="col-md-4" data-aos="fade-up">
                    <div class="feature-card p-4 h-100">
                        <i class="bi bi-building feature-icon"></i>
                        <h4>Autoridades Gubernamentales</h4>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Planificación
                                energética nacional</li>
                            <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Fiscalización del
                                sector</li>
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i> Diseño de política pública
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="feature-card p-4 h-100">
                        <i class="bi bi-briefcase feature-icon"></i>
                        <h4>Inversionistas</h4>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Evaluación de
                                viabilidad</li>
                            <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Cumplimiento
                                regulatorio</li>
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i> Oportunidades de inversión
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                    <div class="feature-card p-4 h-100">
                        <i class="bi bi-people feature-icon"></i>
                        <h4>Sociedad Civil</h4>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Acceso a datos
                                abiertos</li>
                            <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Transparencia
                                energética</li>
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i> Participación informada</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Login Section -->
    <section class="form-section" id="acceso">
        <video autoplay muted loop id="video-bg">
            <source src="@cdn/video/Login_snier.mp4" type="video/mp4">
        </video>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center mb-5" data-aos="fade-down">
                    <h2 class="text-white mb-3">Accede al SNIER</h2>
                    <p class="lead text-white-50">Plataforma oficial del Sistema Nacional de Información Energética</p>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-5" data-aos="fade-right">
                    <div class="login-card p-4 p-md-5 mb-4 mb-lg-0">
                        <div class="text-center mb-4">
                            <img src="@cdn/img_snier/login/logo_snier.png" class="img-fluid mb-3"
                                style="max-width: 120px;">
                            <h4 class="fw-bold" style="color: var(--primary-color);">Iniciar sesión</h4>
                            <p class="text-muted">Accede con tu cuenta o entra en modo consulta pública</p>
                        </div>

                        <ul class="nav nav-pills nav-fill mb-3" id="loginTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link @(ViewData["Mensaje"] == null ? "active" : "")"
                                    id="consulta-tab" data-bs-toggle="pill" data-bs-target="#consultaPublica"
                                    type="button" role="tab">Consulta
                                    Pública</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link @(ViewData["Mensaje"] != null ? "active" : "")" id="acceso-tab"
                                    data-bs-toggle="pill" data-bs-target="#accesoSENER" type="button"
                                    role="tab">Acceso</button>
                            </li>
                        </ul>

                        <div class="tab-content" id="loginTabContent">
                            <div class="tab-pane fade @(ViewData["Mensaje"] == null ? "show active" : "")"
                                id="consultaPublica" role="tabpanel">
                                <div class="alert alert-info text-center">
                                    <strong>Consulta pública</strong><br />Haz clic en el botón para ingresar sin
                                    cuenta.
                                </div>
                                <a class="btn btn-primary w-100"
                                    href="@Url.Action("AccesoComoInvitado", "Acceso")">Entrar como
                                    Invitado</a>
                            </div>

                            <div class="tab-pane fade @(ViewData["Mensaje"] != null ? "show active" : "")"
                                id="accesoSENER" role="tabpanel">
                                <form action="@Url.Action("Login", "Acceso")" method="post">
                                    <div class="mb-3">
                                        <label for="Correo" class="form-label">Correo o RFC</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                                            <input type="text" class="form-control" id="Correo" name="Correo"
                                                placeholder="ejemplo@correo.com" required />
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="claveInput" class="form-label">Contraseña</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                            <input type="password" class="form-control" id="claveInput" name="Clave"
                                                placeholder="••••••••" required />
                                            <span class="input-group-text" onclick="togglePassword()">
                                                <i class="bi bi-eye" id="iconoClave"></i>
                                            </span>
                                        </div>
                                    </div>

                                    @if (ViewData["Mensaje"] != null)
                                    {
                                        <div class="alert alert-danger text-center">
                                            <i class="bi bi-exclamation-circle me-2"></i>@ViewData["Mensaje"]
                                        </div>
                                    }

                                    <div class="d-grid mb-2">
                                        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                                    </div>
                                    <div class="text-center mb-2">
                                        <a href="@Url.Action("ForgotPassword", "Acceso")">¿Olvidaste tu contraseña?</a>
                                    </div>
                                    <div class="text-center">
                                        <span>¿No tienes cuenta? <a href="@Url.Action("Registro", "Acceso")">Regístrate
                                                aquí</a></span>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-5" data-aos="fade-left">
                    <div class="p-4 p-md-5 text-white">
                        <h4 class="fw-bold mb-4">¿Primera vez en el SNIER?</h4>
                        <p class="mb-4">Regístrate para acceder a todas las funcionalidades del sistema:</p>

                        <ul class="list-unstyled mb-5">
                            <li class="mb-3"><i class="bi bi-check-circle-fill text-primary me-2"></i> Acceso completo a
                                todos los módulos</li>
                            <li class="mb-3"><i class="bi bi-check-circle-fill text-primary me-2"></i> Descarga de
                                reportes personalizados</li>
                            <li class="mb-3"><i class="bi bi-check-circle-fill text-primary me-2"></i> Alertas y
                                notificaciones personalizadas</li>
                            <li class="mb-3"><i class="bi bi-check-circle-fill text-primary me-2"></i> Herramientas
                                avanzadas de análisis</li>
                            <li><i class="bi bi-check-circle-fill text-primary me-2"></i> Soporte técnico prioritario
                            </li>
                        </ul>

                        <div class="bg-white p-4 rounded text-dark">
                            <h5 class="fw-bold mb-3">¿Eres una institución?</h5>
                            <p class="mb-3">Solicita una cuenta institucional con privilegios especiales para carga de
                                datos.</p>
                            <a href="#" class="btn btn-primary">Registrate</a>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title">Preguntas frecuentes</h2>
                <p class="lead text-muted">Resuelve tus dudas sobre el SNIER</p>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="accordion" id="faqAccordion">
                        <div class="accordion-item border-0 mb-3 rounded overflow-hidden" data-aos="fade-up">
