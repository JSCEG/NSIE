@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <title>SNIE</title>

    <!-- CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css">
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true">

    <!-- Google Tag Manager -->
    <script>
        (function (w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' });
            var f = d.getElementsByTagName(s)[0], j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : '';
            j.async = true; j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', 'GTM-NXLZHRMM');
    </script>
</head>

<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NXLZHRMM" height="0" width="0"
            style="display:none;visibility:hidden"></iframe>
    </noscript>

    <!-- Video Background -->
    <video autoplay muted loop id="myVideo">
        <source src="/video/Login_n.mp4" type="video/mp4">
    </video>

    <!-- Main Content -->
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <!-- Logo -->
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="/img/lc6.png" class="brand_logo" alt="Logo SNIE">
                </div>
            </div>

            <!-- Welcome Message -->
            <div class="d-flex justify-content-center mt-4">
                <h4 class="subtitulo" id="Bienvenido"><strong>¡Bienvenido!</strong></h4>
            </div>

            <!-- Navigation Tabs -->
            <div class="container">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Mensaje"] == null ? "active" : "")" data-toggle="tab"
                            href="#consultaPublica">Consulta Pública</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Mensaje"] != null ? "active" : "")" data-toggle="tab"
                            href="#accesoSENER">Acceso SENER</a>
                    </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content">
                    <!-- Public Access Tab -->
                    <div id="consultaPublica"
                        class="container tab-pane fade @(ViewData["Mensaje"] == null ? "show active" : "")">
                        <div class="mt-4">
                            <div class="alert alert-custom" role="alert">
                                <p class="text-center m-0">
                                    <i class="bi bi-info-circle-fill me-2"></i>
                                    Haz clic en <strong>"¡Ingresa a Consulta Pública!"</strong> para acceder.
                                </p>
                            </div>
                            <div class="d-flex justify-content-center links">
                                <a class="btn btn-snie-verde" href="@Url.Action("AccesoComoInvitado", "Acceso")">
                                    ¡Ingresa a Consulta Pública!
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- SENER Access Tab -->
                    <div id="accesoSENER"
                        class="container tab-pane fade @(ViewData["Mensaje"] != null ? "show active" : "")">
                        <div class="mt-4">
                            <div class="alert alert-custom" role="alert">
                                <p class="text-center m-0">
                                    <i class="bi bi-info-circle-fill me-2"></i>
                                    Acceso exclusivo para Servidores Públicos SENER.
                                </p>
                            </div>

                            <form action="@Url.Action("Login", "Acceso")" method="post">
                                <!-- Email Input -->
                                <div class="input-group mb-2">
                                    <div class="input-group-append">
                                        <span class="input-group-text nsie-bg"><i class="fas fa-envelope"></i></span>
                                    </div>
                                    <input id="Correo" type="email" name="Correo" class="form-control input_user"
                                        placeholder="Correo" required>
                                </div>

                                <!-- Password Input -->
                                <div class="input-group mb-2">
                                    <div class="input-group-append">
                                        <span class="input-group-text nsie-bg"><i class="fas fa-key"></i></span>
                                    </div>
                                    <input type="password" name="Clave" class="form-control input_pass" id="claveInput"
                                        placeholder="Contraseña" required>
                                    <span class="input-group-text nsie-bg" onclick="togglePassword()">
                                        <i class="bi bi-eye" id="iconoClave"></i>
                                    </span>
                                </div>

                                <!-- Error Message -->
                                @if (ViewData["Mensaje"] != null)
                                {
                                    <div class="alert alert-danger">
                                        <i class="bi bi-exclamation-circle-fill me-2"></i> @ViewData["Mensaje"]
                                    </div>
                                }

                                <!-- Submit Button -->
                                <div class="d-flex justify-content-center mt-3 login_container">
                                    <button type="submit" class="btn btn-snie-verde">Iniciar Sesión</button>
                                </div>
                            </form>

                            <!-- Password Reset Link -->
                            <div class="mt-3 text-center">
                                <a href="@Url.Action("ForgotPassword", "Acceso")" class="smaller-font">
                                    ¿Olvidaste tu contraseña? Restablécela aquí
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="~/js/validacion-formulario.js"></script>

    <script>
        function togglePassword() {
            const input = document.getElementById("claveInput");
            const icono = document.getElementById("iconoClave");
            input.type = input.type === "password" ? "text" : "password";
            icono.classList.toggle("bi-eye");
            icono.classList.toggle("bi-eye-slash");
        }
    </script>


    <scipt src="~/js/validacion-formulario.js">
        </script>
        @* <script src="~/js/seguridad.js"></script>*@
</body>

</html>