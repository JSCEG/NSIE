@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <title>SNIER - Sesión Expirada</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome + Montserrat -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">

    <style>
        body {
            margin: 0;
            padding: 0;
            background: #000;
            font-family: 'Montserrat', sans-serif;
            overflow: hidden;
        }

        #myVideo {
            position: fixed;
            top: 0;
            left: 0;
            min-width: 100%;
            min-height: 100%;
            object-fit: cover;
            z-index: -1;
        }

        .user_card {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(16px);
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            padding: 2rem;
            width: 100%;
            max-width: 400px;
        }

        .brand_logo {
            max-width: 100px;
        }

        .btn-snie-verde {
            background-color: #81c3c9 !important;
            color: white !important;
            border: none;
            border-radius: 30px;
            font-weight: bold;
            padding: 0.6rem 1.5rem;
            transition: all 0.3s ease-in-out;
        }

        .btn-snie-verde:hover {
            background-color: #5ba5aa !important;
        }

        .titulo {
            color: #333;
        }

        .small-text {
            font-size: 0.85rem;
            color: #555;
            margin-top: 1rem;
        }

        .fade-in {
            animation: fadeIn ease 2s;
        }

        @@keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateY(-10px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .contador {
            font-weight: bold;
            font-size: 1.2rem;
            color: #c0392b;
            margin-top: 0.5rem;
        }
    </style>
</head>

<body>
    <video autoplay muted loop id="myVideo">
        <source src="/video/Login_n.mp4" type="video/mp4">
    </video>

    <div class="container d-flex justify-content-center align-items-center min-vh-100 fade-in">
        <div class="user_card text-center">
            <div class="mb-4">
                <img src="/img/login/logo_snier.png" alt="Logo SNIER" class="brand_logo">
            </div>

            <h4 class="titulo fw-bold mb-3">¡Estimado Usuario!</h4>

            <div class="alert alert-danger">
                <strong>Tu sesión ha expirado o no has iniciado sesión correctamente.</strong>
            </div>

            <a href="@Url.Action("Login", "Acceso")" class="btn btn-snie-verde mb-3">
                <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
            </a>

            <div class="alert alert-warning mb-2">
                <strong>Por favor, inicia sesión nuevamente.</strong>
            </div>

            <div class="small-text">
                Serás redirigido automáticamente en <span class="contador" id="cuentaRegresiva">8</span> segundos...
            </div>
        </div>
    </div>

    <script>
        let segundos = 8;
        const contadorElemento = document.getElementById("cuentaRegresiva");

        const cuentaAtras = setInterval(() => {
            segundos--;
            contadorElemento.textContent = segundos;
            if (segundos <= 0) {
                clearInterval(cuentaAtras);
                window.location.href = '@Url.Action("Login", "Acceso")';
            }
        }, 1000);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
