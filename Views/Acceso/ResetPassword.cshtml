@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nueva Contraseña | SNIER</title>
    <meta name="description" content="Sistema Nacional de Información Energética - Restablecimiento de contraseña">

    <!-- Bootstrap 5.3 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Poppins:wght@600;700&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <style>
        :root {
            --primary-color: #216d92;
            --primary-light: #81c3c9;
            --primary-dark: #0d4b6e;
            --secondary-color: #FF9800;
            --dark-color: #1A3E4C;
            --light-color: #F8F9FA;
        }

        html, body {
            height: 100%;
            overflow-y: auto; /* Permite scroll vertical */
        }

        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            overflow: hidden;
            min-height: 100vh;
        }

        #video-bg {
            position: fixed;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            transform: translate(-50%, -50%);
            object-fit: cover;
            z-index: -1;
        }

        .password-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 450px;
            padding: 2.5rem;
            max-height: 90vh;
            overflow-y: auto;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            font-weight: 600;
            padding: 0.75rem;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(33, 109, 146, 0.3);
        }

        .input-group-text {
            background-color: var(--primary-color);
            color: white;
            border: none;
        }

        .form-control {
            border-left: none;
            padding-left: 0;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #ced4da;
        }

        .brand-logo {
            max-width: 120px !important;
            margin-bottom: 1.5rem !important;
        }

        .alert-success {
            background-color: #e8f5e9;
            color: #2e7d32;
            border: none;
        }

        .alert-danger {
            background-color: #ffebee;
            color: #c62828;
            border: none;
        }

        /* Responsive adjustments */
        @@media (max-width: 576px) {
            .password-card {
                padding: 1.5rem;
                margin: 0 1rem;
            }
        }
    </style>
</head>

<body>
    <video autoplay muted loop id="video-bg">
        <source src="https://cdn.sassoapps.com/video/Login_snier.mp4" type="video/mp4">
    </video>
      
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="password-card" data-aos="zoom-in">
            <div class="text-center mb-4">
                <img src="https://cdn.sassoapps.com/img_snier/login/logo_snier.png" class="brand-logo" alt="SNIER">
                <h4 class="class="fw-bold" style="color: var(--primary-color);"><strong>¡Restablezca su contraseña!</strong></h4>
                <p class="text-muted">Ingresa el Token que se te envió e ingresa tu nueva contraseña</p>
            </div>
                @if (ViewData["EsExitoso"] == null || !(bool)ViewData["EsExitoso"])
                {
                    <!-- Mostrar formulario de restablecimiento de contraseña -->
                    <form action="@Url.Action("ResetPassword", "Acceso")" method="post">
                        
                        <div class="mb-4">
                            <label for="Token" class="form-label">Token</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-key"></i></span>
                                <input id="Token" type="text" name="Token" class="form-control" placeholder="Ingrese su Token" required>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="Clave" class="form-label">Nueva Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                                <input id="Clave" type="password" name="Clave" class="form-control" placeholder="Ingrese su Nueva contraseña" required>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="ConfirmarClave" class="form-label">Confirmar Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                                <input id="ConfirmarClave" type="password" name="ConfirmarClave" class="form-control" placeholder="Confirme su contraseña" required>
                            </div>
                        </div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger text-center" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }

                        <div class="d-grid mb-3">
                            <button type="submit" name="button" class="btn btn-primary">Restablecer contraseña</button>
                        </div>
                    </form>

                }

                else
                {
                    <!-- Mostrar mensaje de éxito y enlace de retorno -->

                    <div class="container">
                        <div class="row">
                            <div class="col alert alert-success text-center" role="alert">
                                    @ViewData["Mensaje"]
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <center>
                                    <div class="text-center mt-3">
                                        <a href="@Url.Action("Login", "Acceso")" class="text-decoration-none">
                                            <i class="bi bi-arrow-left me-2"></i>Volver al inicio de sesión
                                        </a>
                                    </div>
                                </center>
                            </div>
                        </div>
                    </div>

                }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>