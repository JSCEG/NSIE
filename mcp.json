{
    "mcpServers": {
        "filesystem": {
            "command": "npx",
            "args": [
                "@modelcontextprotocol/server-filesystem",
                "c:\\Proyectos\\SNIER"
            ],
            "env": {
                "MCP_FILESYSTEM_ROOT": "c:\\Proyectos\\SNIER"
            }
        },
        "git": {
            "command": "npx",
            "args": [
                "@modelcontextprotocol/server-git",
                "--repository",
                "c:\\Proyectos\\SNIER"
            ]
        },
        "sql-snier": {
            "command": "node",
            "args": [
                "mcp-sql-production.js"
            ],
            "env": {
                "MCP_SQL_DATABASE": "BDPruebasSNIER"
            }
        },
        "sql-local": {
            "command": "node",
            "args": [
                "mcp-sql-local-v2.js"
            ],
            "env": {
                "MCP_SQL_LOCAL": "true"
            }
        },
        "sql-analytics": {
            "command": "npx",
            "args": [
                "@modelcontextprotocol/server-sqlite",
                "--db-path",
                "analytics.db"
            ],
            "env": {
                "MCP_ANALYTICS_MODE": "true",
                "SNIER_DB_SERVER": "servidorsqljavidev.database.windows.net",
                "SNIER_DB_NAME": "BDPruebasSNIER"
            }
        },
        "excel-reports": {
            "command": "npx",
            "args": [
                "@modelcontextprotocol/server-excel"
            ],
            "env": {
                "EXCEL_OUTPUT_DIR": "c:\\Proyectos\\SNIER\\Reportes",
                "EXCEL_TEMPLATE_DIR": "c:\\Proyectos\\SNIER\\Templates"
            }
        }
    }
}